{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontmatter Schema",
  "description": "Complete schema for frontmatter YAML structure with all required and optional fields",
  "type": "object",
  "required": [
    "applications",
    "category",
    "description",
    "name",
    "materialProperties",
    "materialCharacteristics",
    "subcategory",
    "title"
  ],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Material name"
    },
    "category": {
      "type": "string",
      "enum": [
        "metal",
        "ceramic",
        "composite",
        "semiconductor",
        "glass",
        "stone",
        "wood",
        "plastic",
        "masonry",
        "rare-earth"
      ],
      "description": "Material category"
    },
    "subcategory": {
      "type": "string",
      "enum": [
        "precious", "ferrous", "non-ferrous", "refractory", "reactive", "specialty",
        "oxide", "nitride", "carbide", "traditional",
        "fiber-reinforced", "matrix", "resin", "elastomeric",
        "borosilicate", "soda-lime", "lead", "specialty-glass",
        "igneous", "metamorphic", "sedimentary", "architectural", "composite",
        "hardwood", "softwood", "engineered", "grass",
        "thermoplastic", "thermoset", "engineering", "biodegradable",
        "intrinsic", "doped", "compound",
        "fired", "concrete", "natural", "lanthanide"
      ],
      "description": "Material subcategory for enhanced classification and intelligent tagging"
    },
    "complexity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "description": "Processing complexity"
    },
    "difficulty_score": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Difficulty score"
    },
    "author_id": {
      "type": "integer",
      "minimum": 0,
      "maximum": 4,
      "description": "Author ID (0 for system-generated content)"
    },
    "title": {
      "type": "string",
      "description": "SEO-optimized title"
    },
    "subtitle": {
      "type": "string",
      "description": "AI-generated subtitle highlighting material-specific characteristics and treatment differences (2 sentences, 20-30 words)"
    },
    "headline": {
      "type": "string",
      "description": "Marketing headline"
    },
    "caption": {
      "type": "object",
      "description": "Microscopic analysis caption with before/after text",
      "properties": {
        "beforeText": {"type": "string"},
        "afterText": {"type": "string"},
        "description": {"type": "string"},
        "alt": {"type": "string"},
        "author": {"type": "string"},
        "imageUrl": {"type": "object"},
        "technicalAnalysis": {"type": "object"},
        "microscopy": {"type": "object"},
        "generation": {"type": "object"},
        "materialProperties": {"type": "object"}
      }
    },
    "outcomeMetrics": {
      "type": "object",
      "description": "Quantified outcome metrics",
      "properties": {
        "efficiency": {"type": "string"},
        "qualityImprovement": {"type": "string"},
        "costReduction": {"type": "string"},
        "timeReduction": {"type": "string"},
        "sustainabilityBenefit": {"type": "string"},
        "quantifiedBenefits": {"type": "string"}
      }
    },
    "description": {
      "type": "string",
      "description": "Technical description"
    },
    "keywords": {
      "type": "string",
      "description": "SEO keywords"
    },
    "author_object": {
      "$ref": "#/definitions/AuthorObject"
    },
    "composition": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material composition"
    },

    "processing": {
      "$ref": "#/definitions/Processing"
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Industry names for material applications (e.g., 'Aerospace', 'Manufacturing', 'Medical')"
    },
    "safety": {
      "$ref": "#/definitions/Safety"
    },
    "sustainability": {
      "$ref": "#/definitions/Sustainability"
    },
    "content": {
      "$ref": "#/definitions/Content"
    },
    "metadata": {
      "$ref": "#/definitions/Metadata"
    },
    "compatibility": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "laser_types": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "surface_treatments": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "incompatible_conditions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ],
      "description": "Legacy compatibility field - use laserProcessing.compatibility for new implementations"
    },
    "materialProperties": {
      "$ref": "#/definitions/MaterialProperties",
      "description": "Categorized material properties organized by laser cleaning process stages (2-category structure: material_characteristics and laser_material_interaction)"
    },
    "materialCharacteristics": {
      "$ref": "#/definitions/MaterialCharacteristics",
      "description": "Qualitative categorical properties including thermal behavior, safety ratings, physical appearance, and material classification"
    },
    "machineSettings": {
      "$ref": "#/definitions/MachineSettings",
      "description": "Unified machine settings for laser processing parameters"
    },
    "chemicalProperties": {
      "$ref": "#/definitions/ChemicalProperties",
      "description": "Chemical composition and formula information (legacy - consolidated into properties)"
    },
    "regulatoryStandards": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Regulatory standards"
    },
    "images": {
      "$ref": "#/definitions/Images"
    },
    "environmentalImpact": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnvironmentalImpact"
      },
      "description": "Environmental benefits"
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Outcome"
      },
      "description": "Measurable outcomes"
    },
    "surface_roughness_before": {
      "type": "number",
      "description": "Surface roughness before cleaning"
    },
    "surface_roughness_after": {
      "type": "number",
      "description": "Surface roughness after cleaning"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material tags"
    },

    "compatibleLaserTypes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Compatible laser types"
    },
    "industryTags": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "Industry-specific tags"
    },
    "laserInteraction": {
      "type": "object",
      "description": "Laser interaction properties"
    },
    "primaryIndustries": {
      "type": "array",
      "items": {
        "type": "string" 
      },
      "description": "Primary industries using this material"
    }
  },
  "definitions": {
    "AuthorObject": {
      "type": "object",
      "required": [
        "id",
        "name",
        "sex",
        "title",
        "country",
        "expertise",
        "image"
