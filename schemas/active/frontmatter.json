        "id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        },
        "name": {
          "type": "string"
        },
        "sex": {
          "type": "string",
          "enum": [
            "m",
            "f"
          ]
        },
        "title": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "expertise": {
          "type": "string"
