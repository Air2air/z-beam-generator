{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Enhanced Frontmatter Schema",
  "description": "Enhanced schema with nested properties, validation metadata, and schema-as-single-source-of-truth architecture",
  "type": "object",
  "required": [
    "applications",
    "author_id",
    "category",
    "description",
    "name",
    "materialProperties",
    "subcategory",
    "title"
  ],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Material name"
    },
    "category": {
      "type": "string",
      "enum": [
        "metal",
        "ceramic",
        "composite",
        "semiconductor",
        "glass",
        "stone",
        "wood",
        "plastic",
        "masonry"
      ],
      "description": "Material category"
    },
    "subcategory": {
      "type": "string",
      "enum": [
        "precious",
        "ferrous",
        "non-ferrous",
        "refractory",
        "reactive",
        "specialty",
        "aerospace",
        "oxide",
        "nitride",
        "carbide",
        "traditional",
        "fiber-reinforced",
        "matrix",
        "resin",
        "elastomeric",
        "borosilicate",
        "soda-lime",
        "lead",
        "specialty-glass",
        "igneous",
        "metamorphic",
        "sedimentary",
        "architectural",
        "composite",
        "hardwood",
        "softwood",
        "engineered",
        "grass",
        "thermoplastic",
        "thermoset",
        "engineering",
        "biodegradable",
        "intrinsic",
        "doped",
        "compound",
        "fired",
        "concrete",
        "natural"
      ],
      "description": "Material subcategory including aerospace for advanced materials"
    },
    "title": {
      "type": "string",
      "description": "SEO-optimized title"
    },
    "description": {
      "type": "string",
      "description": "Technical description"
    },
    "author_id": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Author ID"
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Industrial applications as simple string descriptions",
      "minItems": 1
    },
    "machineSettings": {
      "type": "object",
      "description": "Laser machine settings with validation metadata",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "Setting value"
          },
          "min": {
            "type": "number",
            "description": "Minimum recommended value"
          },
          "max": {
            "type": "number",
            "description": "Maximum recommended value"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement"
          },
          "description": {
            "type": "string",
            "description": "Setting description and purpose for laser cleaning"
          },
          "validation": {
            "type": "object",
            "required": [
              "confidence_score",
              "sources_validated"
            ],
            "properties": {
              "confidence_score": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Confidence score for this setting"
              },
              "sources_validated": {
                "type": "integer",
                "minimum": 0,
                "description": "Number of sources that validated this setting"
              },
              "research_sources": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Research sources for this setting"
              }
            },
            "additionalProperties": false
          },
          "optimization_notes": {
            "type": "string",
            "description": "Optimization guidance for this setting"
          }
        },
        "required": [
          "value",
          "unit",
          "validation"
        ],
        "additionalProperties": false
      }
    },
    "chemicalProperties": {
      "type": "object",
      "description": "Chemical composition and formula information",
      "properties": {
        "formula": {
          "type": "string",
          "description": "Chemical formula (e.g., Ti-6Al-4V)"
        },
        "symbol": {
          "type": "string",
          "description": "Chemical symbol (e.g., Ti)"
        }
      },
      "additionalProperties": false
    },
    "materialProperties": {
      "type": "object",
      "description": "Enhanced material material properties with nested structure and research validation metadata",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "Numeric value of the property"
          },
          "unit": {
            "type": "string",
            "description": "Unit of measurement"
          },
          "min": {
            "type": "number",
            "description": "Minimum value in range"
          },
          "max": {
            "type": "number",
            "description": "Maximum value in range"
          },
          "description": {
            "type": "string",
            "description": "Property description and relevance to laser cleaning"
          },
          "validation": {
            "type": "object",
            "description": "Research validation metadata - mandatory for quality assurance",
            "required": [
              "confidence_score",
              "sources_validated"
            ],
            "properties": {
              "confidence_score": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Confidence score for this property (0-1)"
              },
              "sources_validated": {
                "type": "integer",
                "minimum": 0,
                "description": "Number of sources that validated this property"
              },
              "research_sources": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "List of research sources used for validation",
                "minItems": 1
              },
              "accuracy_class": {
                "type": "string",
                "enum": [
                  "verified",
                  "validated",
                  "estimated",
                  "calculated"
                ],
                "description": "Classification of data accuracy level"
              },
              "material_specific": {
                "type": "boolean",
                "description": "Whether this value is material-specific or generic"
              }
            },
            "additionalProperties": false
          },
          "processing_impact": {
            "type": "string",
            "description": "Impact of this property on laser processing and cleaning effectiveness"
          }
        },
        "required": [
          "value",
          "unit",
          "validation"
        ],
        "additionalProperties": false
      },
      "minProperties": 1
    }
  }
}