{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DataMetric Schema",
  "description": "Schema for a single property value within materialProperties or machineSettings",
  "type": "object",
  "required": [
    "value",
    "unit",
    "min",
    "max", 
    "description",
    "validation"
  ],
  "properties": {
    "value": {
      "type": "number",
      "description": "Numeric value of the property"
    },
    "unit": {
      "type": "string",
      "description": "Unit of measurement"
    },
    "min": {
      "type": "number",
      "description": "Minimum value in range"
    },
    "max": {
      "type": "number",
      "description": "Maximum value in range"
    },
    "description": {
      "type": "string",
      "description": "Property description and relevance to laser cleaning"
    },
    "validation": {
      "type": "object",
      "description": "Research validation metadata - mandatory for quality assurance",
      "required": [
        "confidence_score",
        "sources_validated"
      ],
      "properties": {
        "confidence_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for this property (0-1)"
        },
        "sources_validated": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of sources that validated this property"
        },
        "research_sources": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of research sources used for validation"
        },
        "accuracy_class": {
          "type": "string",
          "enum": [
            "verified",
            "validated",
            "estimated",
            "calculated"
          ],
          "description": "Classification of data accuracy level"
        },
        "material_specific": {
          "type": "boolean",
          "description": "Whether this value is material-specific or generic"
        }
      },
      "additionalProperties": false
    },
    "processing_impact": {
      "type": "string",
      "description": "Impact of this property on laser processing and cleaning effectiveness"
    },
    "optimization_notes": {
      "type": "string",
      "description": "Optimization guidance for this specific property"
    }
  },
  "additionalProperties": false
}