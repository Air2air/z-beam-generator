{
  "regionProfile": {
    "name": "region",
    "version": "1.4",
    "schemaType": "RegionProfile",
    "generatorConfig": {
      "tags": {
        "includeCountries": true,
        "includeIndustries": true
      },
      "jsonld": {
        "schemaType": "Place",
        "includeGeo": true
      },
      "frontmatter": {
        "includeLocation": true
      },
      "contentGeneration": {
        "dynamicSectionsFromFrontmatter": true,
        "fieldContentMapping": {
          "countries": "Describe the key countries in {subject} region and their relevance to laser cleaning applications",
          "economicData": "Analyze the economic landscape of {subject} and how it impacts laser technology adoption",
          "manufacturingCenters": "Detail the major manufacturing centers in {subject} and their laser cleaning implementations",
          "laserCleaningData": "Explain current laser cleaning adoption trends in {subject} region",
          "caseStudies": "Present relevant case studies showcasing laser cleaning success in {subject}"
        },
        "introductionPrompt": "Provide a comprehensive overview of region..."
      }
    },
    "profile": {
      "countries": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "required": true
      },
      "geoCoordinates": {
        "type": "object",
        "required": true,
        "properties": {
          "latitude": {
            "type": "string",
            "required": true
          },
          "longitude": {
            "type": "string",
            "required": true
          }
        }
      },
      "economicData": {
        "type": "object",
        "required": true,
        "properties": {
          "gdp": {
            "type": "string",
            "required": false
          },
          "majorIndustries": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "required": true
          },
          "tradePartners": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "required": false
          }
        }
      },
      "manufacturingCenters": {
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "required": true
            },
            "description": {
              "type": "string",
              "required": true
            },
            "laserCleaningUsage": {
              "type": "string",
              "required": false
            }
          }
        }
      }
    },
    "facilities": {
      "type": "array",
      "required": false,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true,
            "description": "Facility name",
            "example": "Z-Beam Tech Center"
          },
          "location": {
            "type": "string",
            "required": true,
            "description": "California city, county, and state",
            "example": "San Diego, San Diego County, California"
          },
          "coordinates": {
            "type": "string",
            "required": true,
            "description": "Geographic coordinates",
            "example": "32.7157° N, 117.1611° W"
          },
          "description": {
            "type": "string",
            "required": true,
            "description": "Facility description (50–75 words)",
            "example": "R&D hub for naval corrosion removal..."
          }
        }
      },
      "description": "1–3 California facilities for region articles"
    },
    "validation": {
      "frontmatter": {
        "requiredFields": [
          "name",
          "description",
          "website",
          "author",
          "keywords",
          "tags",
          "countries",
          "geoCoordinates",
          "economicData"
        ]
      }
    },
    "jsonld": {
      "schemaType": "Article",
      "required": true,
      "properties": {
        "@context": {
          "value": "https://schema.org",
          "required": true
        },
        "@type": {
          "value": "Article",
          "required": true
        },
        "headline": {
          "source": "name",
          "required": true
        },
        "description": {
          "source": "description",
          "required": true
        },
        "mainEntityOfPage": {
          "required": true,
          "properties": {
            "@type": {
              "value": "WebPage",
              "required": true
            },
            "@id": {
              "source": "website",
              "required": true,
              "default": "https://www.z-beam.com/{slug}-laser-cleaning"
            }
          }
        },
        "author": {
          "required": true,
          "properties": {
            "@type": {
              "value": "Person",
              "required": true
            },
            "identifier": {
              "source": "author.author_id",
              "required": true
            },
            "name": {
              "source": "author.author_name",
              "required": true
            },
            "nationality": {
              "source": "author.author_country",
              "required": true
            },
            "description": {
              "source": "author.credentials",
              "required": true
            },
            "affiliation": {
              "required": true,
              "properties": {
                "@type": {
                  "value": "Organization",
                  "required": true
                },
                "name": {
                  "source": "author.name",
                  "required": true
                }
              }
            }
          }
        },
        "publisher": {
          "required": true,
          "properties": {
            "@type": {
              "value": "Organization",
              "required": true
            },
            "name": {
              "value": "Z-Beam",
              "required": true
            },
            "logo": {
              "required": true,
              "properties": {
                "@type": {
                  "value": "ImageObject",
                  "required": true
                },
                "url": {
                  "value": "https://www.z-beam.com/logo.png",
                  "required": true
                }
              }
            }
          }
        },
        "datePublished": {
          "format": "YYYY-MM-DD",
          "required": true
        },
        "dateModified": {
          "format": "YYYY-MM-DD",
          "required": true
        },
        "image": {
          "template": "https://www.z-beam.com/images/{slug}-laser-cleaning.jpg",
          "required": true
        },
        "keywords": {
          "source": "keywords",
          "format": "comma-separated",
          "required": true
        }
      }
    }
  }
}
