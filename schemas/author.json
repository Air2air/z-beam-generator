{
  "name": "authorProfile",
  "version": "1.2",
  "schemaType": "AuthorSchema",
  "author": {
    "type": "object",
    "required": true,
    "properties": {
      "id": { "type": "integer", "required": true },
      "name": { "type": "string", "required": true },
      "slug": { "type": "string", "required": true },
      "title": { "type": "string", "required": false },
      "bio": { "type": "string", "required": false },
      "specialties": {
        "type": "array",
        "items": { "type": "string" },
        "required": false
      },
      "image": { "type": "string", "required": false },
      "country": { "type": "string", "required": false }
    }
  },
  "authorProfile": {
    "type": "object",
    "required": true,
    "properties": {
      "generatorConfig": {
        "type": "object",
        "required": true,
        "properties": {
          "jsonld": {
            "type": "object",
            "required": true,
            "properties": {
              "schemaType": { "type": "string", "required": true }
            }
          },
          "contentGeneration": {
            "type": "object",
            "required": false,
            "properties": {
              "dynamicSectionsFromFrontmatter": { "type": "boolean", "required": false },
              "fieldContentMapping": {
                "type": "object",
                "required": false,
                "properties": {
                  "biography": { "type": "string", "required": false },
                  "expertise": { "type": "string", "required": false },
                  "publications": { "type": "string", "required": false },
                  "affiliations": { "type": "string", "required": false },
                  "achievements": { "type": "string", "required": false }
                }
              },
              "introductionPrompt": { "type": "string", "required": false }
            }
          }
        }
      },
      "profile": {
        "type": "object",
        "required": true,
        "properties": {
          "biography": { "type": "string", "required": true },
          "expertise": { "type": "string", "required": true },
          "publications": { "type": "string", "required": false },
          "affiliations": { "type": "string", "required": false }
        }
      },
      "validation": {
        "type": "object",
        "required": false,
        "properties": {
          "frontmatter": {
            "type": "object",
            "required": false,
            "properties": {
              "requiredFields": {
                "type": "array",
                "items": { "type": "string" },
                "required": false
              }
            }
          }
        }
      }
    }
  }
}