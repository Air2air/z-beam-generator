{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontmatter Schema",
  "description": "Complete schema for frontmatter YAML structure with all required and optional fields",
  "type": "object",
  "required": [
    "applications",
    "author",
    "category",
    "description",
    "images",
    "name",
    "subcategory",
    "title"
  ],
  "additionalProperties": true,
  "properties": {
    "name": {
      "type": "string",
      "description": "Material name"
    },
    "category": {
      "type": "string",
      "enum": [
        "metal",
        "Metal",
        "ceramic",
        "Ceramic",
        "composite",
        "Composite",
        "semiconductor",
        "glass",
        "stone",
        "wood",
        "plastic",
        "masonry",
        "polymer",
        "fabric",
        "biomaterial",
        "nanomaterial",
        "crystal",
        "powder",
        "rare-earth"
      ],
      "description": "Material category"
    },
    "subcategory": {
      "type": "string",
      "enum": [
        "precious", "ferrous", "non-ferrous", "alloy", "refractory", "reactive", "specialty",
        "aerospace", "automotive", "medical",
        "oxide", "nitride", "carbide", "silicate", "traditional", "advanced",
        "structural", "functional", "fiber-reinforced", "matrix", "resin", "elastomeric",
        "laminate", "hybrid", "borosilicate", "soda-lime", "lead", "specialty-glass",
        "optical", "safety", "igneous", "metamorphic", "sedimentary", "architectural",
        "decorative", "industrial", "hardwood", "softwood", "engineered", "bamboo",
        "cork", "composite-wood", "thermoplastic", "thermoset", "engineering",
        "biodegradable", "recycled", "intrinsic", "doped", "compound", "quantum",
        "photonic", "natural", "synthetic", "organic", "woven", "nonwoven", "technical",
        "tissue", "implant", "drug-delivery", "diagnostic", "scaffold", "carbon",
        "metallic", "ceramic-nano", "polymer-nano", "quantum-dot", "single",
        "polycrystalline", "amorphous", "liquid", "quasicrystal", "metal", "ceramic",
        "polymer", "composite", "specialty-powder", "lanthanide", "actinide",
        "fired", "concrete"
      ],
      "description": "Material subcategory for enhanced classification and intelligent tagging"
    },
    "author_id": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Author ID"
    },
    "title": {
      "type": "string",
      "description": "SEO-optimized title"
    },
    "subtitle": {
      "type": "string",
      "description": "Secondary title or tagline"
    },
    "headline": {
      "type": "string",
      "description": "Marketing headline"
    },
    "description": {
      "type": "string",
      "description": "Technical description"
    },
    "keywords": {
      "type": "string",
      "description": "SEO keywords"
    },
    "author": {
      "$ref": "#/definitions/Author"
    },
    "composition": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material composition"
    },

    "processing": {
      "$ref": "#/definitions/Processing"
    },
    "applications": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Industry names for material applications (e.g., 'Aerospace', 'Manufacturing', 'Medical')"
    },
    "safety": {
      "$ref": "#/definitions/Safety"
    },
    "sustainability": {
      "$ref": "#/definitions/Sustainability"
    },
    "content": {
      "$ref": "#/definitions/Content"
    },
    "metadata": {
      "$ref": "#/definitions/Metadata"
    },
    "compatibility": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "laser_types": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "surface_treatments": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "incompatible_conditions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ],
      "description": "Legacy compatibility field - use laserProcessing.compatibility for new implementations"
    },
    "materialProperties": {
      "$ref": "#/definitions/MaterialProperties",
      "description": "Categorized material properties organized by laser cleaning process stages"
    },
    "machineSettings": {
      "$ref": "#/definitions/MachineSettings",
      "description": "Unified machine settings for laser processing parameters"
    },
    "chemicalProperties": {
      "$ref": "#/definitions/ChemicalProperties",
      "description": "Chemical composition and formula information (legacy - consolidated into properties)"
    },
    "regulatoryStandards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Standard organization name (e.g., FDA, ANSI, IEC, OSHA, ISO)"
          },
          "description": {
            "type": "string",
            "description": "Full standard description and identifier"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "URL to the standard documentation"
          },
          "image": {
            "type": "string",
            "description": "Path to organization logo image (e.g., /images/logo/logo_org_fda.png)"
          }
        }
      },
      "description": "Regulatory standards and compliance requirements with structured metadata"
    },
    "images": {
      "$ref": "#/definitions/Images"
    },
    "caption": {
      "type": "object",
      "description": "Caption information for material images"
    },
    "environmentalImpact": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnvironmentalImpact"
      },
      "description": "Environmental benefits"
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Outcome"
      },
      "description": "Measurable outcomes"
    },
    "outcomeMetrics": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "description": "Detailed outcome metrics"
    },
    "surface_roughness_before": {
      "type": "number",
      "description": "Surface roughness before cleaning"
    },
    "surface_roughness_after": {
      "type": "number",
      "description": "Surface roughness after cleaning"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material tags"
    },

    "compatibleLaserTypes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Compatible laser types"
    },
    "industryTags": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "Industry-specific tags"
    },
    "laserInteraction": {
      "type": "object",
      "description": "Laser interaction properties"
    },
    "primaryIndustries": {
      "type": "array",
      "items": {
        "type": "string" 
      },
      "description": "Primary industries using this material"
    },
    "componentOutputs": {
      "type": "object",
      "description": "Embedded specialized component outputs",
      "additionalProperties": true,
      "properties": {
        "caption": {
          "$ref": "#/definitions/CaptionOutput"
        },
        "jsonld": {
          "$ref": "#/definitions/JsonldOutput"
        },
        "metatags": {
          "$ref": "#/definitions/MetatagsOutput"
        }
      }
    },
    "preservedData": {
      "type": "object",
      "description": "Preserved metadata from migration process"
    }
  },
  "definitions": {
    "Author": {
      "type": "object",
      "required": [
        "id",
        "name",
        "sex",
        "title",
        "country",
        "expertise",
        "image"
      ],
      "additionalProperties": true,
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        },
        "name": {
          "type": "string"
        },
        "sex": {
          "type": "string",
          "enum": [
            "m",
            "f"
          ]
        },
        "title": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "expertise": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "ChemicalProperties": {
      "type": "object",
      "description": "Chemical composition and behavior",
      "additionalProperties": true,
      "properties": {
        "chemicalFormula": {
          "type": "string",
          "description": "Chemical formula representation"
        },
        "formula": {
          "type": "string",
          "description": "Alternative formula notation"
        },
        "symbol": {
          "type": "string",
          "description": "Chemical symbol"
        },
        "materialType": {
          "type": "string",
          "description": "Material classification type"
        },
        "corrosionResistance": {
          "type": "string",
          "description": "Corrosion resistance properties"
        },
        "biocompatibility": {
          "type": "string",
          "description": "Biocompatibility characteristics"
        },
        "crystalStructure": {
          "type": "string",
          "description": "Crystal lattice structure"
        }
      }
    },
    "PhysicalProperties": {
      "type": "object",
      "description": "Physical characteristics and measurements",
      "additionalProperties": true,
      "properties": {
        "density": {
          "type": "number",
          "description": "Material density value"
        },
        "densityNumeric": {
          "type": "number"
        },
        "densityUnit": {
          "type": "string"
        },
        "densityMin": {
          "type": "number"
        },
        "densityMinNumeric": {
          "type": "number"
        },
        "densityMax": {
          "type": "number"
        },
        "densityMaxNumeric": {
          "type": "number"
        },
        "electricalResistivity": {
          "type": "number",
          "description": "Electrical resistivity measurement"
        }
      }
    },
    "MechanicalProperties": {
      "type": "object",
      "description": "Mechanical strength and behavior",
      "additionalProperties": true,
      "properties": {
        "tensileStrength": {
          "type": "number"
        },
        "tensileStrengthNumeric": {
          "type": "number"
        },
        "tensileStrengthUnit": {
          "type": "string"
        },
        "tensileStrengthMin": {
          "type": "number"
        },
        "tensileStrengthMax": {
          "type": "number"
        },
        "hardness": {
          "type": "number"
        },
        "hardnessNumeric": {
          "type": "number"
        },
        "hardnessUnit": {
          "type": "string"
        },
        "hardnessMin": {
          "type": "number"
        },
        "hardnessMinNumeric": {
          "type": "number"
        },
        "hardnessMax": {
          "type": "number"
        },
        "hardnessMaxNumeric": {
          "type": "number"
        },
        "youngsModulus": {
          "type": "number"
        },
        "youngsModulusNumeric": {
          "type": "number"
        },
        "youngsModulusUnit": {
          "type": "string"
        },
        "youngsModulusMin": {
          "type": "number"
        },
        "youngsModulusMax": {
          "type": "number"
        },
        "modulusMin": {
          "type": "number"
        },
        "modulusMinNumeric": {
          "type": "number"
        },
        "modulusMax": {
          "type": "number"
        },
        "modulusMaxNumeric": {
          "type": "number"
        },
        "yieldStrength": {
          "type": "number"
        },
        "yieldStrengthNumeric": {
          "type": "number"
        },
        "yieldStrengthUnit": {
          "type": "string"
        },
        "yieldStrengthMin": {
          "type": "number"
        },
        "yieldStrengthMax": {
          "type": "number"
        }
      }
    },
    "ThermalProperties": {
      "type": "object",
      "description": "Heat-related properties and behavior",
      "additionalProperties": true,
      "properties": {
        "thermalConductivity": {
          "type": "number"
        },
        "thermalConductivityNumeric": {
          "type": "number"
        },
        "thermalConductivityUnit": {
          "type": "string"
        },
        "thermalConductivityMin": {
          "type": "number"
        },
        "thermalConductivityMax": {
          "type": "number"
        },
        "thermalExpansion": {
          "type": "number"
        },
        "thermalExpansionMin": {
          "type": "number"
        },
        "thermalExpansionMax": {
          "type": "number"
        },
        "thermalExpansionUnit": {
          "type": "string"
        },
        "thermalDiffusivity": {
          "type": "number"
        },
        "thermalDiffusivityNumeric": {
          "type": "number"
        },
        "thermalDiffusivityUnit": {
          "type": "string"
        },
        "thermalDiffusivityMin": {
          "type": "string"
        },
        "thermalDiffusivityMax": {
          "type": "string"
        },
        "specificHeat": {
          "type": "number"
        },
        "specificHeatNumeric": {
          "type": "number"
        },
        "specificHeatUnit": {
          "type": "string"
        },
        "specificHeatMin": {
          "type": "number"
        },
        "specificHeatMax": {
          "type": "number"
        },
        "thermalDestruction": {
          "$ref": "#/definitions/ThermalDestructionProperty"
        }
      }
    },
    "ThermalDestructionProperty": {
      "type": "object",
      "description": "Nested thermal destruction property with point and type",
      "required": ["point", "type"],
      "additionalProperties": true,
      "properties": {
        "point": {
          "type": "object",
          "description": "Thermal destruction temperature data",
          "required": ["value", "unit"],
          "additionalProperties": true,
          "properties": {
            "value": {
              "type": "number",
              "description": "Thermal destruction temperature value"
            },
            "unit": {
              "type": "string",
              "description": "Temperature unit (K, °C, °F)"
            },
            "confidence": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Data confidence level (0-100)"
            },
            "description": {
              "type": "string",
              "description": "Property description"
            },
            "min": {
              "type": "number",
              "description": "Category-wide minimum value"
            },
            "max": {
              "type": "number",
              "description": "Category-wide maximum value"
            }
          }
        },
        "type": {
          "type": "string",
          "enum": ["melting", "thermal_shock", "decomposition", "carbonization", "spalling"],
          "description": "Type of thermal destruction mechanism"
        }
      }
    },
    "RecommendedSettings": {
      "type": "object",
      "description": "Optimal laser settings for this material",
      "additionalProperties": true,
      "properties": {
        "powerRange": {
          "type": "number"
        },
        "powerRangeNumeric": {
          "type": "number"
        },
        "powerRangeUnit": {
          "type": "string"
        },
        "powerRangeMin": {
          "type": "number"
        },
        "powerRangeMinNumeric": {
          "type": "number"
        },
        "powerRangeMax": {
          "type": "number"
        },
        "powerRangeMaxNumeric": {
          "type": "number"
        },
        "wavelength": {
          "type": "number"
        },
        "wavelengthNumeric": {
          "type": "number"
        },
        "wavelengthUnit": {
          "type": "string"
        },
        "wavelengthMin": {
          "type": "number"
        },
        "wavelengthMinNumeric": {
          "type": "number"
        },
        "wavelengthMax": {
          "type": "number"
        },
        "wavelengthMaxNumeric": {
          "type": "number"
        },
        "pulseDuration": {
          "type": "number"
        },
        "pulseDurationNumeric": {
          "type": "number"
        },
        "pulseDurationUnit": {
          "type": "string"
        },
        "pulseDurationMin": {
          "type": "number"
        },
        "pulseDurationMinNumeric": {
          "type": "number"
        },
        "pulseDurationMax": {
          "type": "number"
        },
        "pulseDurationMaxNumeric": {
          "type": "number"
        },
        "fluenceRange": {
          "type": "number"
        },
        "fluenceRangeNumeric": {
          "type": "number"
        },
        "fluenceRangeUnit": {
          "type": "string"
        },
        "fluenceRangeMin": {
          "type": "number"
        },
        "fluenceRangeMinNumeric": {
          "type": "number"
        },
        "fluenceRangeMax": {
          "type": "number"
        },
        "fluenceRangeMaxNumeric": {
          "type": "number"
        }
      }
    },
    "ThresholdSettings": {
      "type": "object",
      "description": "Critical thresholds and safety limits",
      "additionalProperties": true,
      "properties": {
        "spotSize": {
          "type": "number"
        },
        "spotSizeNumeric": {
          "type": "number"
        },
        "spotSizeUnit": {
          "type": "string"
        },
        "spotSizeMin": {
          "type": "number"
        },
        "spotSizeMinNumeric": {
          "type": "number"
        },
        "spotSizeMax": {
          "type": "number"
        },
        "spotSizeMaxNumeric": {
          "type": "number"
        },
        "repetitionRate": {
          "type": "number"
        },
        "repetitionRateNumeric": {
          "type": "number"
        },
        "repetitionRateUnit": {
          "type": "string"
        },
        "repetitionRateMin": {
          "type": "number"
        },
        "repetitionRateMinNumeric": {
          "type": "number"
        },
        "repetitionRateMax": {
          "type": "number"
        },
        "repetitionRateMaxNumeric": {
          "type": "number"
        },
        "scanningSpeed": {
          "type": "number"
        },
        "scanningSpeedNumeric": {
          "type": "number"
        },
        "scanningSpeedUnit": {
          "type": "string"
        },
        "scanningSpeedMin": {
          "type": "number"
        },
        "scanningSpeedMinNumeric": {
          "type": "number"
        },
        "scanningSpeedMax": {
          "type": "number"
        },
        "scanningSpeedMaxNumeric": {
          "type": "number"
        }
      }
    },
    "LaserCompatibility": {
      "type": "object",
      "description": "Laser type compatibility and interaction properties",
      "additionalProperties": true,
      "properties": {
        "laserTypes": {
          "type": "array",
          "items": {
            "type": "string"
          },
