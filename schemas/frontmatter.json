      "description": "Processing guidelines and surface considerations",
      "additionalProperties": true,
      "properties": {
        "surfaceCompatibility": {
          "$ref": "#/definitions/SurfaceCompatibility"
        },
        "guidelines": {
          "$ref": "#/definitions/ProcessingGuidelines"
        }
      }
    },
    "SurfaceCompatibility": {
      "type": "object",
      "description": "Surface treatment and preparation requirements",
      "additionalProperties": true,
      "properties": {
        "surfaceTreatments": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Compatible surface treatments"
        },
        "incompatibleConditions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Conditions to avoid"
        },
        "surfaceRoughnessBefore": {
          "type": "number",
