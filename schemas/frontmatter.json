{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontmatter Schema",
  "description": "Complete schema for frontmatter YAML structure with all required and optional fields",
  "type": "object",
  "required": [
    "name",
    "category",
    "complexity",
    "difficulty_score",
    "author_id",
    "title",
    "headline",
    "description",
    "keywords",
    "author_object",
    "properties",
    "machineSettings",
    "chemicalProperties",
    "applications"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Material name"
    },
    "category": {
      "type": "string",
      "enum": [
        "metal",
        "ceramic",
        "composite",
        "semiconductor",
        "glass",
        "stone",
        "wood",
        "plastic",
        "masonry"
      ],
      "description": "Material category"
    },
    "subcategory": {
      "type": "string",
      "description": "Material subcategory (e.g., 'non-ferrous', 'ferrous', 'silicate')"
    },
    "complexity": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "description": "Processing complexity"
    },
    "difficulty_score": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Difficulty score"
    },
    "author_id": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Author ID"
    },
    "title": {
      "type": "string",
      "description": "SEO-optimized title"
    },
    "headline": {
      "type": "string",
      "description": "Marketing headline"
    },
    "description": {
      "type": "string",
      "description": "Technical description"
    },
    "keywords": {
      "type": "string",
      "description": "SEO keywords"
    },
    "author_object": {
      "$ref": "#/definitions/AuthorObject"
    },
    "properties": {
      "$ref": "#/definitions/Properties"
    },
    "composition": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material composition"
    },
    "machineSettings": {
      "$ref": "#/definitions/MachineSettings"
    },
    "chemicalProperties": {
      "$ref": "#/definitions/ChemicalProperties"
    },
    "applications": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Application"
      },
      "description": "Industrial applications"
    },
    "compatibility": {
      "oneOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "laser_types": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "surface_treatments": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "incompatible_conditions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ],
      "description": "Compatible materials or compatibility information"
    },
    "regulatoryStandards": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      ],
      "description": "Regulatory standards"
    },
    "images": {
      "$ref": "#/definitions/Images"
    },
    "environmentalImpact": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnvironmentalImpact"
      },
      "description": "Environmental benefits"
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Outcome"
      },
      "description": "Measurable outcomes"
    },
    "surface_roughness_before": {
      "type": "number",
      "description": "Surface roughness before cleaning"
    },
    "surface_roughness_after": {
      "type": "number",
      "description": "Surface roughness after cleaning"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material tags"
    },
    "prompt_chain_verification": {
      "$ref": "#/definitions/PromptChainVerification"
    },
    "compatibleLaserTypes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Compatible laser types"
    },
    "industryTags": {
      "type": "array", 
      "items": {
        "type": "string"
      },
      "description": "Industry-specific tags"
    },
    "laserInteraction": {
      "type": "object",
      "description": "Laser interaction properties"
    },
    "primaryIndustries": {
      "type": "array",
      "items": {
        "type": "string" 
      },
      "description": "Primary industries using this material"
    }
  },
