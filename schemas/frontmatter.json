        "complianceRegions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Geographic compliance areas"
        }
      }
    },
    "Sustainability": {
      "type": "object",
      "description": "Environmental impact and sustainability metrics",
      "additionalProperties": true,
      "properties": {
        "environmental": {
          "$ref": "#/definitions/EnvironmentalMetrics"
        },
        "lifecycle": {
