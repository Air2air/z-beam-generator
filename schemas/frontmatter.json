        "hardnessMaxNumeric": {
          "type": "number"
        },
        "hardnessMaxUnit": {
          "type": "string"
        },
        "hardnessPercentile": {
          "type": "number"
        },
        "youngsModulus": {
          "type": "string"
        },
        "youngsModulusNumeric": {
          "type": "number"
        },
        "youngsModulusUnit": {
          "type": "string"
        },
        "modulusMin": {
          "type": "string"
