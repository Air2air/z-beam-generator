{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontmatter Schema",
  "description": "Complete schema for frontmatter YAML structure with all required and optional fields",
  "type": "object",
  "required": [
    "name",
    "category", 
    "complexity",
    "difficulty_score",
    "author_id",
    "title",
    "headline",
    "description",
    "keywords",
    "author",
    "author_object",
    "properties",
    "machineSettings",
    "chemicalProperties",
    "applications"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Material name"
    },
    "category": {
      "type": "string",
      "enum": ["metal", "ceramic", "composite", "semiconductor", "glass", "stone", "wood", "plastic", "masonry"],
      "description": "Material category"
    },
    "complexity": {
      "type": "string",
      "enum": ["low", "medium", "high"],
      "description": "Processing complexity"
    },
    "difficulty_score": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Difficulty score"
    },
    "author_id": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4,
      "description": "Author ID"
    },
    "title": {
      "type": "string",
      "description": "SEO-optimized title"
    },
    "headline": {
      "type": "string", 
      "description": "Marketing headline"
    },
    "description": {
      "type": "string",
      "description": "Technical description"
    },
    "keywords": {
      "type": "string",
      "description": "SEO keywords"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "author_object": {
      "$ref": "#/definitions/AuthorObject"
    },
    "properties": {
      "$ref": "#/definitions/Properties"
    },
    "composition": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material composition"
    },
    "machineSettings": {
      "$ref": "#/definitions/MachineSettings"
    },
    "chemicalProperties": {
      "$ref": "#/definitions/ChemicalProperties"
    },
    "applications": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Application"
      },
      "description": "Industrial applications"
    },
    "compatibility": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Compatible materials"
    },
    "regulatoryStandards": {
      "type": "string",
      "description": "Regulatory standards"
    },
    "images": {
      "$ref": "#/definitions/Images"
    },
    "environmentalImpact": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EnvironmentalImpact"
      },
      "description": "Environmental benefits"
    },
    "outcomes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Outcome"
      },
      "description": "Measurable outcomes"
    },
    "prompt_chain_verification": {
      "$ref": "#/definitions/PromptChainVerification"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Material tags"
    },
    "surface_roughness_before": {
      "type": "number",
      "description": "Surface roughness before cleaning"
    },
    "surface_roughness_after": {
      "type": "number", 
      "description": "Surface roughness after cleaning"
    }
  },
  "definitions": {
    "AuthorObject": {
      "type": "object",
      "required": ["id", "name", "sex", "title", "country", "expertise", "image"],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1,
          "maximum": 4
        },
        "name": {
          "type": "string"
        },
        "sex": {
          "type": "string",
          "enum": ["m", "f"]
        },
        "title": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "expertise": {
          "type": "string"
        },
        "image": {
          "type": "string"
        }
      }
    },
    "Properties": {
      "type": "object",
      "required": [
