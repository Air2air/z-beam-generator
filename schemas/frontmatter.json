        },
        "laserAbsorption": {
          "type": "number"
        },
        "laserAbsorptionNumeric": {
          "type": "number"
        },
        "laserAbsorptionUnit": {
          "type": "string"
        },
        "laserAbsorptionMin": {
          "type": "string"
        },
        "laserAbsorptionMax": {
          "type": "string"
        },
        "laserReflectivity": {
          "type": "number"
        },
        "laserReflectivityNumeric": {
