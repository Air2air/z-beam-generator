{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Materials Database Schema",
  "description": "Schema for Materials.yaml - Individual material properties organized by category",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "format_version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+$",
          "description": "Format version of the materials database"
        },
        "frontmatter_files_analyzed": {
          "type": "integer",
          "minimum": 0
        },
        "last_updated": {
          "type": "string",
          "format": "date",
          "description": "ISO 8601 date of last update"
        },
        "sync_date": {
          "type": "string",
          "format": "date"
        },
        "total_categories": {
          "type": "integer",
          "minimum": 1
        },
        "total_materials": {
          "type": "integer",
          "minimum": 1
        }
      },
      "required": ["format_version", "total_categories", "total_materials"],
      "additionalProperties": true
    },
    "category_metadata": {
      "type": "object",
      "patternProperties": {
        "^[a-z]+$": {
          "type": "object",
          "properties": {
            "article_type": {
              "type": "string",
              "enum": ["material"]
            },
            "description": {
              "type": "string"
            }
          },
          "required": ["article_type", "description"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "machineSettingsRanges": {
      "type": "object",
      "description": "Global machine setting ranges across all materials"
    },
    "property_groups": {
      "type": "object",
      "description": "Grouping of related properties for organization"
    },
    "materials": {
      "type": "object",
      "description": "Individual material entries",
      "patternProperties": {
        "^[A-Z]": {
          "$ref": "#/definitions/Material"
        }
      },
      "additionalProperties": false
    },
    "material_index": {
      "type": "object",
      "description": "Index mapping material names to categories"
    }
  },
  "required": ["metadata", "materials"],
  "additionalProperties": true,
  "definitions": {
    "Material": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Material display name"
        },
        "category": {
          "type": "string",
          "enum": ["ceramic", "composite", "glass", "masonry", "metal", "plastic", "semiconductor", "stone", "wood"],
          "description": "Primary material category - MUST match Categories.yaml categories"
        },
        "subcategory": {
          "type": "string",
          "description": "Material subcategory within primary category - MUST match Categories.yaml subcategories"
        },
        "author": {
          "type": "string",
          "description": "Content author assignment"
        },
        "properties": {
          "$ref": "#/definitions/MaterialProperties"
        },
        "thermalProperties": {
          "$ref": "#/definitions/ThermalProperties"
        },
        "mechanicalProperties": {
          "$ref": "#/definitions/MechanicalProperties"
        },
        "electricalProperties": {
          "$ref": "#/definitions/ElectricalProperties"
        },
        "material_metadata": {
          "$ref": "#/definitions/MaterialMetadata"
        }
      },
      "required": ["name", "category"],
      "additionalProperties": true
    },
    "MaterialProperties": {
      "type": "object",
      "description": "Core material properties",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "oneOf": [
            {"type": "number"},
            {"type": "string"},
            {"type": "boolean"},
            {"type": "null"}
          ]
        }
      },
      "additionalProperties": false
    },
    "ThermalProperties": {
      "type": "object",
      "properties": {
        "density": {
          "type": "number",
          "description": "Material density in g/cm³"
        },
        "thermalDestructionPoint": {
          "type": "number",
          "description": "Temperature at which thermal damage begins (°C)"
        },
        "thermalDestructionType": {
          "type": "string",
          "enum": ["melting", "decomposition", "carbonization", "oxidation", "sublimation", "thermal_shock", "softening", "spalling", "calcination", "delamination"],
          "description": "Primary mechanism of thermal failure"
        },
        "thermalConductivity": {
          "type": "number",
          "description": "Thermal conductivity in W/m·K"
        },
        "thermalExpansion": {
          "type": "number",
          "description": "Coefficient of thermal expansion in μm/m·°C"
        },
        "specificHeat": {
          "type": "number",
          "description": "Specific heat capacity in J/kg·K"
        },
        "thermalDiffusivity": {
          "type": "number",
          "description": "Thermal diffusivity in mm²/s"
        }
      },
      "additionalProperties": true
    },
    "MechanicalProperties": {
      "type": "object",
      "properties": {
        "hardness": {
          "oneOf": [
            {"type": "number"},
            {"type": "string"}
          ],
          "description": "Material hardness (various scales: HV, Mohs, Shore, lbf)"
        },
        "tensileStrength": {
          "type": "number",
          "description": "Tensile strength in MPa"
        },
        "youngsModulus": {
          "type": "number",
          "description": "Young's modulus in GPa"
        },
        "compressiveStrength": {
          "type": "number",
          "description": "Compressive strength in MPa"
        },
        "flexuralStrength": {
          "type": "number",
          "description": "Flexural strength in MPa"
        },
        "fractureToughness": {
          "type": "number",
          "description": "Fracture toughness in MPa·m^0.5"
        }
      },
      "additionalProperties": true
    },
    "ElectricalProperties": {
      "type": "object",
      "properties": {
        "electricalResistivity": {
          "oneOf": [
            {"type": "number"},
            {"type": "string"}
          ],
          "description": "Electrical resistivity (various units)"
        },
        "dielectricConstant": {
          "type": "number",
          "description": "Relative permittivity"
        }
      },
      "additionalProperties": true
    },
    "MaterialMetadata": {
      "type": "object",
      "properties": {
        "industryTags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Industries using this material"
        },
        "regulatoryStandards": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Applicable regulatory standards"
        }
      },
      "additionalProperties": true
    },
    "CategoryValidation": {
      "description": "Rules for validating materials against their category ranges",
      "type": "object",
      "properties": {
        "category_name": {
          "type": "string",
          "enum": ["ceramic", "composite", "glass", "masonry", "metal", "plastic", "semiconductor", "stone", "wood"]
        },
        "validation_rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "property": {
                "type": "string",
                "description": "Property name to validate"
              },
              "must_exist": {
                "type": "boolean",
                "description": "Whether this property is required"
              },
              "must_be_in_category_range": {
                "type": "boolean",
                "description": "Whether value must fall within category range"
              },
              "severity": {
                "type": "string",
                "enum": ["error", "warning", "info"],
                "description": "Severity if validation fails"
              }
            },
            "required": ["property", "severity"]
          }
        }
      }
    }
  },
  "validation_notes": {
    "category_consistency": "Material 'category' field MUST match one of the categories defined in Categories.yaml",
    "subcategory_consistency": "Material 'subcategory' field MUST match one of the subcategories defined for its category in Categories.yaml",
    "property_ranges": "Numeric property values SHOULD fall within the min/max ranges defined in Categories.yaml for the material's category",
    "required_properties": "Materials SHOULD have values for all properties defined in their category's category_ranges",
    "cross_file_validation": "This schema should be validated in conjunction with categories_schema.json for complete data integrity"
  }
}
