{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://z-beam.com/schemas/application_frontmatter.json",
  "title": "Application Frontmatter Schema",
  "description": "JSON Schema for laser cleaning application frontmatter files",
  "type": "object",
  "required": [
    "layout",
    "title",
    "application",
    "description"
  ],
  "properties": {
    "layout": {
      "type": "string",
      "const": "application",
      "description": "Layout type for application pages"
    },
    "title": {
      "type": "string",
      "description": "Page title"
    },
    "application": {
      "type": "string",
      "description": "Application name"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the application and use cases"
    },
    "category": {
      "type": "string",
      "enum": ["industrial", "restoration", "maintenance", "manufacturing", "specialized"],
      "description": "Application category"
    },
    "industry": {
      "type": "string",
      "description": "Primary industry for this application"
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of generation"
    },
    "placeholder": {
      "type": "boolean",
      "description": "Whether this is placeholder content"
    },
    "useCases": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Specific use cases within this application"
    },
    "commonMaterials": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Common materials processed in this application"
    },
    "commonContaminants": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Common contaminants removed in this application"
    },
    "processRequirements": {
      "type": "object",
      "description": "Process requirements and characteristics",
      "properties": {
        "automation_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "very high"]
        },
        "throughput": {
          "type": "string",
          "enum": ["low", "medium", "high", "very high"]
        },
        "precision_level": {
          "type": "string",
          "enum": ["low", "medium", "high", "very high", "extreme"]
        },
        "quality_standards": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "benefits": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Key benefits of laser cleaning for this application"
    },
    "challenges": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Key challenges in this application"
    },
    "author": {
      "type": "object",
      "description": "Author information",
      "properties": {
        "name": {"type": "string"},
        "country": {"type": "string"},
        "expertise": {"type": "string"}
      }
    },
    "_metadata": {
      "type": "object",
      "description": "Generation metadata",
      "properties": {
        "generator": {"type": "string"},
        "version": {"type": "string"},
        "content_type": {"type": "string"},
        "status": {"type": "string"}
      }
    }
  }
}
