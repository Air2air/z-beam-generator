{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.z-beam.com/schemas/dataset-material.json",
  "title": "Z-Beam Material Dataset Schema",
  "description": "Comprehensive schema for materials laser cleaning datasets combining material properties and machine settings",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "@context",
    "@type",
    "identifier",
    "name",
    "description",
    "license",
    "creator",
    "publisher",
    "material",
    "variableMeasured",
    "citation",
    "distribution"
  ],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "Schema.org context for structured data"
    },
    "@type": {
      "type": "string",
      "const": "Dataset",
      "description": "Schema.org type designation"
    },
    "identifier": {
      "type": "string",
      "pattern": "^[a-z0-9-]+-material-dataset$",
      "description": "Unique identifier matching dataset filename",
      "examples": ["aluminum-material-dataset", "steel-material-dataset"]
    },
    "name": {
      "type": "string",
      "minLength": 10,
      "description": "Human-readable dataset title",
      "examples": ["Aluminum Material Dataset", "Steel Laser Cleaning Dataset"]
    },
    "description": {
      "type": "string",
      "minLength": 100,
      "description": "Comprehensive dataset description explaining scope and value"
    },
    "license": {
      "type": "object",
      "required": ["@type", "name", "url"],
      "properties": {
        "@type": {"type": "string", "const": "CreativeWork"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "creator": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {"type": "string", "const": "Organization"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "publisher": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {"type": "string", "const": "Organization"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "datePublished": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of first publication"
    },
    "dateModified": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of last update"
    },
    "measurementTechnique": {
      "type": "string",
      "minLength": 10,
      "description": "Description of measurement and data collection methods"
    },
    "material": {
      "type": "object",
      "required": ["materialProperties", "machineSettings"],
      "description": "Core dataset content: material characteristics and laser cleaning parameters",
      "properties": {
        "materialProperties": {
          "type": "object",
          "required": ["category", "subcategory"],
          "description": "Physical, thermal, optical, and mechanical material characteristics",
          "properties": {
            "category": {
              "type": "string",
              "enum": ["metal", "ceramic", "glass", "stone", "wood", "plastic", "composite", "masonry", "semiconductor", "rare-earth"],
              "description": "Primary material classification"
            },
            "subcategory": {
              "type": "string",
              "description": "Specific material subcategory"
            },
            "density": {
              "$ref": "#/definitions/measuredValue",
              "description": "Material mass per unit volume (kg/m³)"
            },
            "meltingPoint": {
              "$ref": "#/definitions/measuredValue",
              "description": "Temperature at which material transitions to liquid state (°C)"
            },
            "boilingPoint": {
              "$ref": "#/definitions/measuredValue",
              "description": "Temperature at which material vaporizes (°C)"
            },
            "thermalConductivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Rate of heat transfer through material (W/(m·K))"
            },
            "specificHeat": {
              "$ref": "#/definitions/measuredValue",
              "description": "Energy required to raise temperature per unit mass (J/(kg·K))"
            },
            "thermalExpansion": {
              "$ref": "#/definitions/measuredValue",
              "description": "Dimensional change per degree temperature change (1/°C)"
            },
            "thermalDiffusivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Rate of heat diffusion through material (m²/s)"
            },
            "laserAbsorption": {
              "$ref": "#/definitions/measuredValue",
              "description": "Fraction of incident laser energy absorbed (dimensionless, 0-1)"
            },
            "laserReflectivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Fraction of incident laser energy reflected (dimensionless, 0-1)"
            },
            "absorptivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Fraction of radiation absorbed at laser wavelength (dimensionless, 0-1)"
            },
            "reflectivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Fraction of light reflected from surface (dimensionless, 0-1)"
            },
            "emissivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Thermal radiation efficiency relative to blackbody (dimensionless, 0-1)"
            },
            "ablationThreshold": {
              "$ref": "#/definitions/measuredValue",
              "description": "Minimum energy density for material removal (J/cm²)"
            },
            "laserDamageThreshold": {
              "$ref": "#/definitions/measuredValue",
              "description": "Energy density causing permanent material damage (J/cm²)"
            },
            "tensileStrength": {
              "$ref": "#/definitions/measuredValue",
              "description": "Maximum tensile stress before failure (MPa)"
            },
            "youngsModulus": {
              "$ref": "#/definitions/measuredValue",
              "description": "Elastic stiffness under tension/compression (GPa)"
            },
            "hardness": {
              "$ref": "#/definitions/measuredValue",
              "description": "Resistance to surface indentation (HV or similar)"
            },
            "porosity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Void fraction in material structure (%, dimensionless)"
            },
            "surfaceRoughness": {
              "$ref": "#/definitions/measuredValue",
              "description": "Average surface texture deviation (μm Ra)"
            },
            "corrosionResistance": {
              "$ref": "#/definitions/measuredValue",
              "description": "Corrosion rate measurement (mm/year typical)"
            },
            "oxidationResistance": {
              "$ref": "#/definitions/measuredValue",
              "description": "Oxidation rate measurement (μm/year typical)"
            },
            "electricalConductivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Ability to conduct electric current (S/m)"
            },
            "electricalResistivity": {
              "$ref": "#/definitions/measuredValue",
              "description": "Opposition to electric current flow (Ω·m)"
            }
          }
        },
        "machineSettings": {
          "type": "object",
          "required": ["power", "wavelength", "spotSize", "repetitionRate", "pulseWidth", "scanSpeed", "passCount", "overlapRatio"],
          "description": "Tier 1 CRITICAL laser cleaning parameters (all 8 required for dataset generation)",
          "properties": {
            "power": {
              "$ref": "#/definitions/parameterRange",
              "description": "Laser average power output (W)"
            },
            "wavelength": {
              "$ref": "#/definitions/parameterRange",
              "description": "Laser emission wavelength (nm)"
            },
            "spotSize": {
              "$ref": "#/definitions/parameterRange",
              "description": "Laser beam diameter at focus (μm)"
            },
            "repetitionRate": {
              "$ref": "#/definitions/parameterRange",
              "description": "Laser pulse frequency (kHz)"
            },
            "pulseWidth": {
              "$ref": "#/definitions/parameterRange",
              "description": "Laser pulse temporal duration (ns)"
            },
            "scanSpeed": {
              "$ref": "#/definitions/parameterRange",
              "description": "Beam translation velocity across surface (mm/s)"
            },
            "passCount": {
              "$ref": "#/definitions/parameterRange",
              "description": "Number of cleaning passes over same area (integer)"
            },
            "overlapRatio": {
              "$ref": "#/definitions/parameterRange",
              "description": "Beam overlap percentage between adjacent scans (%)"
            },
            "fluenceThreshold": {
              "$ref": "#/definitions/parameterRange",
              "description": "Energy density threshold for cleaning (J/cm²)"
            },
            "energyDensity": {
              "$ref": "#/definitions/parameterRange",
              "description": "Energy per unit area (J/cm²)"
            }
          }
        },
        "industryApplications": {
          "type": "array",
          "description": "Key industry sectors using this material",
          "items": {
            "type": "string",
            "examples": ["aerospace", "automotive", "medical_devices", "electronics", "manufacturing", "cultural_heritage"]
          }
        },
        "regulatoryStandards": {
          "type": "array",
          "description": "Applicable safety and quality standards",
          "items": {
            "type": "object",
            "required": ["id", "title", "authority"],
            "properties": {
              "id": {"type": "string"},
              "title": {"type": "string"},
              "authority": {"type": "string"},
              "url": {"type": "string", "format": "uri"},
              "compliance_level": {
                "type": "string",
                "enum": ["mandatory", "recommended", "optional"]
              }
            }
          }
        },
        "commonContaminants": {
          "type": "array",
          "description": "Frequent contamination types for this material",
          "items": {
            "type": "string",
            "examples": ["rust-oxidation-contamination", "oil-contamination", "paint-coating-contamination"]
          }
        }
      }
    },
    "variableMeasured": {
      "type": "array",
      "minItems": 20,
      "description": "Minimum 20 measured variables (Schema.org requirement)",
      "items": {
        "type": "object",
        "required": ["@type", "name"],
        "properties": {
          "@type": {"type": "string", "const": "PropertyValue"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "value": {"type": ["string", "number"]},
          "unitText": {"type": "string"}
        }
      }
    },
    "citation": {
      "type": "array",
      "minItems": 3,
      "description": "Minimum 3 citations (Schema.org requirement)",
      "items": {
        "type": "object",
        "required": ["@type", "name"],
        "properties": {
          "@type": {"type": "string", "const": "CreativeWork"},
          "name": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "author": {"type": "string"},
          "datePublished": {"type": "string", "format": "date"}
        }
      }
    },
    "distribution": {
      "type": "array",
      "minItems": 3,
      "description": "Three format distributions: JSON, CSV, TXT",
      "items": {
        "type": "object",
        "required": ["@type", "encodingFormat", "contentUrl"],
        "properties": {
          "@type": {"type": "string", "const": "DataDownload"},
          "encodingFormat": {
            "type": "string",
            "enum": ["application/json", "text/csv", "text/plain"]
          },
          "contentUrl": {"type": "string", "format": "uri"}
        }
      }
    },
    "keywords": {
      "type": "array",
      "description": "SEO and discovery keywords",
      "items": {"type": "string"}
    },
    "spatialCoverage": {
      "type": "string",
      "description": "Geographic applicability",
      "examples": ["Global", "United States", "European Union"]
    },
    "temporalCoverage": {
      "type": "string",
      "description": "Time period coverage",
      "examples": ["2020-2025", "Current standards"]
    }
  },
  "definitions": {
    "measuredValue": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": {"type": "number"},
        "unit": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "parameterRange": {
      "type": "object",
      "required": ["min", "max", "unit"],
      "properties": {
        "min": {"type": "number", "description": "Minimum safe/effective value"},
        "max": {"type": "number", "description": "Maximum safe/effective value"},
        "value": {"type": "number", "description": "Recommended/typical value"},
        "unit": {"type": "string"},
        "description": {"type": "string"}
      }
    }
  }
}
