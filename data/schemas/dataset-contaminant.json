{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.z-beam.com/schemas/dataset-contaminant.json",
  "title": "Z-Beam Contaminant Dataset Schema",
  "description": "Comprehensive schema for contamination/compound datasets combining contamination properties and chemical safety data",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "@context",
    "@type",
    "identifier",
    "name",
    "description",
    "license",
    "creator",
    "publisher",
    "contaminant",
    "variableMeasured",
    "citation",
    "distribution"
  ],
  "properties": {
    "@context": {
      "type": "string",
      "const": "https://schema.org",
      "description": "Schema.org context for structured data"
    },
    "@type": {
      "type": "string",
      "const": "Dataset",
      "description": "Schema.org type designation"
    },
    "identifier": {
      "type": "string",
      "pattern": "^[a-z0-9-]+-contaminant-dataset$",
      "description": "Unique identifier matching dataset filename",
      "examples": ["rust-oxidation-contaminant-dataset", "benzene-contaminant-dataset"]
    },
    "name": {
      "type": "string",
      "minLength": 10,
      "description": "Human-readable dataset title",
      "examples": ["Rust Oxidation Contaminant Dataset", "Benzene Chemical Compound Dataset"]
    },
    "description": {
      "type": "string",
      "minLength": 100,
      "description": "Comprehensive dataset description explaining contamination characteristics and chemical hazards"
    },
    "license": {
      "type": "object",
      "required": ["@type", "name", "url"],
      "properties": {
        "@type": {"type": "string", "const": "CreativeWork"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "creator": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {"type": "string", "const": "Organization"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "publisher": {
      "type": "object",
      "required": ["@type", "name"],
      "properties": {
        "@type": {"type": "string", "const": "Organization"},
        "name": {"type": "string"},
        "url": {"type": "string", "format": "uri"}
      }
    },
    "datePublished": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of first publication"
    },
    "dateModified": {
      "type": "string",
      "format": "date",
      "description": "ISO 8601 date of last update"
    },
    "measurementTechnique": {
      "type": "string",
      "minLength": 10,
      "description": "Description of measurement and data collection methods"
    },
    "contaminant": {
      "type": "object",
      "required": ["category", "properties"],
      "description": "Core dataset content: contamination characteristics, removal parameters, and chemical safety data",
      "properties": {
        "category": {
          "type": "string",
          "enum": [
            "aging",
            "biological",
            "coating",
            "contamination",
            "corrosion",
            "damage",
            "deposit",
            "organic-residue",
            "oxidation",
            "particulate",
            "toxic_gas",
            "irritant_gas",
            "voc",
            "particulate_matter",
            "chemical_byproduct"
          ],
          "description": "Primary contamination classification"
        },
        "subcategory": {
          "type": "string",
          "description": "Specific contamination subcategory"
        },
        "properties": {
          "type": "object",
          "description": "Physical and chemical contamination characteristics",
          "properties": {
            "appearance": {
              "type": "object",
              "description": "Visual appearance characteristics by material category",
              "patternProperties": {
                "^(metal|ceramic|glass|stone|wood|plastic|composite|masonry|concrete|fabric)$": {
                  "type": "object",
                  "required": ["appearance", "coverage", "pattern"],
                  "properties": {
                    "appearance": {"type": "string", "description": "Visual description of contamination"},
                    "coverage": {"type": "string", "description": "Extent and distribution pattern"},
                    "pattern": {"type": "string", "description": "Spatial formation pattern"},
                    "texture": {"type": "string", "description": "Surface texture characteristics"},
                    "color": {"type": "string", "description": "Color variations"}
                  }
                }
              }
            },
            "composition": {
              "type": "array",
              "description": "Chemical compounds present in contamination",
              "items": {"type": "string"},
              "examples": [["Fe2O3", "Fe3O4"], ["CaCO3"], ["C6H6"]]
            },
            "hazardLevel": {
              "type": "string",
              "enum": ["low", "medium", "high", "severe"],
              "description": "Overall safety hazard classification"
            },
            "removalDifficulty": {
              "type": "string",
              "enum": ["easy", "medium", "hard", "very_hard"],
              "description": "Laser cleaning difficulty assessment"
            },
            "contextNotes": {
              "type": "string",
              "description": "Common occurrence contexts and environments"
            },
            "realismNotes": {
              "type": "string",
              "description": "Real-world appearance variations and aging effects"
            }
          }
        },
        "removalTechniques": {
          "type": "object",
          "description": "Laser cleaning parameters for effective removal",
          "properties": {
            "laserPower": {
              "$ref": "#/definitions/parameterRange",
              "description": "Required laser power for removal (W)"
            },
            "wavelength": {
              "$ref": "#/definitions/parameterRange",
              "description": "Optimal laser wavelength (nm)"
            },
            "fluence": {
              "$ref": "#/definitions/parameterRange",
              "description": "Energy density for removal (J/cm²)"
            },
            "passCount": {
              "$ref": "#/definitions/parameterRange",
              "description": "Number of passes required (integer)"
            },
            "removalRate": {
              "$ref": "#/definitions/measuredValue",
              "description": "Achieved contamination removal percentage (%)"
            },
            "technique": {
              "type": "string",
              "description": "Recommended cleaning technique",
              "examples": ["pulsed", "continuous", "ablation", "thermal_desorption"]
            }
          }
        },
        "compounds": {
          "type": "array",
          "description": "Chemical compounds generated during laser cleaning or present in contamination",
          "items": {
            "type": "object",
            "required": ["name", "formula", "hazardLevel"],
            "properties": {
              "id": {
                "type": "string",
                "description": "Compound identifier"
              },
              "name": {
                "type": "string",
                "description": "Chemical compound name"
              },
              "displayName": {
                "type": "string",
                "description": "Human-readable compound name"
              },
              "formula": {
                "type": "string",
                "description": "Chemical formula",
                "examples": ["Fe2O3", "C6H6", "CO", "CH2O"]
              },
              "casNumber": {
                "type": "string",
                "pattern": "^[0-9]{1,7}-[0-9]{2}-[0-9]$",
                "description": "CAS Registry Number",
                "examples": ["630-08-0", "71-43-2"]
              },
              "molecularWeight": {
                "type": "number",
                "description": "Molecular weight (g/mol)"
              },
              "phase": {
                "type": "string",
                "enum": ["solid", "liquid", "gas", "aerosol"],
                "description": "Physical phase at standard conditions"
              },
              "hazardLevel": {
                "type": "string",
                "enum": ["low", "medium", "high", "severe"],
                "description": "Safety hazard classification"
              },
              "hazardClass": {
                "type": "string",
                "enum": ["toxic", "irritant", "corrosive", "flammable", "carcinogenic", "inert"],
                "description": "Primary hazard classification"
              },
              "healthEffects": {
                "type": "object",
                "description": "Comprehensive toxicology and health effects data",
                "properties": {
                  "exposureRoutes": {
                    "type": "object",
                    "properties": {
                      "inhalation": {"$ref": "#/definitions/exposureRoute"},
                      "skinContact": {"$ref": "#/definitions/exposureRoute"},
                      "eyeContact": {"$ref": "#/definitions/exposureRoute"},
                      "ingestion": {"$ref": "#/definitions/exposureRoute"}
                    }
                  },
                  "acuteEffects": {
                    "type": "object",
                    "properties": {
                      "symptoms": {"type": "array", "items": {"type": "string"}},
                      "onset": {"type": "string"},
                      "duration": {"type": "string"}
                    }
                  },
                  "chronicEffects": {
                    "type": "object",
                    "properties": {
                      "longTermExposure": {"type": "array", "items": {"type": "string"}},
                      "latency": {"type": "string"}
                    }
                  },
                  "toxicologyData": {
                    "type": "object",
                    "properties": {
                      "ld50Oral": {"$ref": "#/definitions/toxicityValue"},
                      "lc50Inhalation": {"$ref": "#/definitions/toxicityValue"}
                    }
                  },
                  "carcinogenicity": {
                    "type": "object",
                    "properties": {
                      "iarc": {"type": "string", "description": "IARC classification"},
                      "ntp": {"type": "string", "description": "NTP classification"},
                      "osha": {"type": "string", "description": "OSHA classification"},
                      "evidence": {"type": "string"}
                    }
                  },
                  "exposureLimits": {
                    "type": "object",
                    "properties": {
                      "oshaPEL": {"$ref": "#/definitions/exposureLimit"},
                      "nioshREL": {"$ref": "#/definitions/exposureLimit"},
                      "acgihTLV": {"$ref": "#/definitions/exposureLimit"}
                    }
                  }
                }
              },
              "ppeRequirements": {
                "type": "string",
                "minLength": 50,
                "description": "Detailed personal protective equipment requirements"
              },
              "detectionMethods": {
                "type": "string",
                "minLength": 50,
                "description": "Air monitoring and detection methods"
              },
              "firstAid": {
                "type": "string",
                "minLength": 50,
                "description": "First aid procedures for exposure"
              },
              "exposureGuidelines": {
                "type": "string",
                "description": "Workplace exposure control guidance"
              },
              "environmentalImpact": {
                "type": "object",
                "description": "Environmental fate and toxicity",
                "properties": {
                  "aquaticToxicity": {"type": "string"},
                  "biodegradability": {"type": "string"},
                  "bioaccumulation": {"type": "string"},
                  "soilMobility": {"type": "string"},
                  "atmosphericFate": {"type": "string"},
                  "ozoneDepletion": {"type": "boolean"},
                  "globalWarmingPotential": {"type": "string"},
                  "reportableReleases": {
                    "type": "object",
                    "properties": {
                      "water": {"type": "string"},
                      "air": {"type": "string"},
                      "soil": {"type": "string"}
                    }
                  }
                }
              },
              "sources": {
                "type": "array",
                "description": "Common generation sources in laser cleaning",
                "items": {"type": "string"},
                "examples": [
                  ["incomplete_organic_combustion", "thermal_decomposition"],
                  ["paint_vaporization", "coating_ablation"]
                ]
              },
              "typicalConcentration": {
                "type": "string",
                "description": "Expected concentration range in laser cleaning operations",
                "examples": ["10-50 mg/m³", "0.1-5 ppm"]
              },
              "monitoringRequired": {
                "type": "boolean",
                "description": "Whether continuous air monitoring is required"
              }
            }
          }
        },
        "validMaterials": {
          "type": "array",
          "description": "Materials commonly affected by this contamination",
          "items": {"type": "string"},
          "examples": [["aluminum-laser-cleaning", "steel-laser-cleaning"]]
        },
        "regulatoryStandards": {
          "type": "array",
          "description": "Applicable safety and handling standards",
          "items": {
            "type": "object",
            "required": ["id", "title", "authority"],
            "properties": {
              "id": {"type": "string"},
              "title": {"type": "string"},
              "authority": {"type": "string"},
              "url": {"type": "string", "format": "uri"},
              "compliance_level": {
                "type": "string",
                "enum": ["mandatory", "recommended", "optional"]
              }
            }
          }
        }
      }
    },
    "variableMeasured": {
      "type": "array",
      "minItems": 20,
      "description": "Minimum 20 measured variables (Schema.org requirement)",
      "items": {
        "type": "object",
        "required": ["@type", "name"],
        "properties": {
          "@type": {"type": "string", "const": "PropertyValue"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "value": {"type": ["string", "number"]},
          "unitText": {"type": "string"}
        }
      }
    },
    "citation": {
      "type": "array",
      "minItems": 3,
      "description": "Minimum 3 citations (Schema.org requirement)",
      "items": {
        "type": "object",
        "required": ["@type", "name"],
        "properties": {
          "@type": {"type": "string", "const": "CreativeWork"},
          "name": {"type": "string"},
          "url": {"type": "string", "format": "uri"},
          "author": {"type": "string"},
          "datePublished": {"type": "string", "format": "date"}
        }
      }
    },
    "distribution": {
      "type": "array",
      "minItems": 3,
      "description": "Three format distributions: JSON, CSV, TXT",
      "items": {
        "type": "object",
        "required": ["@type", "encodingFormat", "contentUrl"],
        "properties": {
          "@type": {"type": "string", "const": "DataDownload"},
          "encodingFormat": {
            "type": "string",
            "enum": ["application/json", "text/csv", "text/plain"]
          },
          "contentUrl": {"type": "string", "format": "uri"}
        }
      }
    },
    "keywords": {
      "type": "array",
      "description": "SEO and discovery keywords",
      "items": {"type": "string"}
    },
    "spatialCoverage": {
      "type": "string",
      "description": "Geographic applicability",
      "examples": ["Global", "United States", "European Union"]
    },
    "temporalCoverage": {
      "type": "string",
      "description": "Time period coverage",
      "examples": ["2020-2025", "Current standards"]
    }
  },
  "definitions": {
    "measuredValue": {
      "type": "object",
      "required": ["value", "unit"],
      "properties": {
        "value": {"type": "number"},
        "unit": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "parameterRange": {
      "type": "object",
      "required": ["min", "max", "unit"],
      "properties": {
        "min": {"type": "number", "description": "Minimum value"},
        "max": {"type": "number", "description": "Maximum value"},
        "value": {"type": "number", "description": "Typical/recommended value"},
        "unit": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "exposureRoute": {
      "type": "object",
      "properties": {
        "primaryConcern": {"type": "boolean"},
        "absorptionRate": {"type": "string"},
        "absorption": {"type": "string"},
        "effects": {"type": "string"}
      }
    },
    "toxicityValue": {
      "type": "object",
      "properties": {
        "value": {"type": "number"},
        "unit": {"type": "string"},
        "species": {"type": "string"}
      }
    },
    "exposureLimit": {
      "type": "object",
      "properties": {
        "value": {"type": "number"},
        "ceiling": {"type": "number"},
        "unit": {"type": "string"},
        "averaging_time": {"type": "string"},
        "notes": {"type": "string"}
      }
    }
  }
}
