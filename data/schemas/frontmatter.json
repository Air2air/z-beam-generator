{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.z-beam.com/schemas/frontmatter.json",
  "title": "Z-Beam Frontmatter Schema",
  "description": "Validation schema for frontmatter files enforcing naming conventions and required fields",
  "version": "1.0.0",
  "type": "object",
  "required": [
    "id",
    "name",
    "contentType",
    "schemaVersion",
    "datePublished",
    "dateModified",
    "author"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for the item"
    },
    "displayName": {
      "type": "string",
      "minLength": 1,
      "description": "Human-readable display name"
    },
    "contentType": {
      "type": "string",
      "enum": ["material", "contaminant", "compound", "setting"],
      "description": "Domain/content type classification"
    },
    "schemaVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version (e.g., '5.0.0')"
    },
    "fullPath": {
      "type": "string",
      "description": "Full path for navigation"
    },
    "pageTitle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "SEO-optimized page title for <title> tag and H1"
    },
    "metaDescription": {
      "type": "string",
      "minLength": 50,
      "maxLength": 160,
      "description": "SEO meta description for search engine snippets (50-160 chars)"
    },
    "datePublished": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 datetime of first publication"
    },
    "dateModified": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 datetime of last modification"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Item name (not for display, use page_title for display)"
    },
    "category": {
      "type": "string",
      "description": "Primary category classification"
    },
    "subcategory": {
      "type": "string",
      "description": "Secondary category classification"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-safe slug"
    },
    "card": {
      "type": "object",
      "properties": {
        "title": {"type": "string"},
        "description": {"type": "string"},
        "image": {"type": "string"},
        "badge": {
          "type": "object",
          "properties": {
            "text": {"type": "string"},
            "variant": {"type": "string"}
          }
        }
      }
    },
    "eeat": {
      "type": "object",
      "properties": {
        "experience": {"type": "string"},
        "expertise": {"type": "string"},
        "authoritativeness": {"type": "string"},
        "trustworthiness": {"type": "string"}
      }
    },
    "images": {
      "type": "object",
      "properties": {
        "hero": {
          "type": "object",
          "properties": {
            "url": {"type": "string"},
            "alt": {"type": "string"},
            "width": {"type": "integer"},
            "height": {"type": "integer"}
          }
        },
        "micro": {
          "type": "object",
          "properties": {
            "url": {"type": "string"},
            "alt": {"type": "string"},
            "width": {"type": "integer"},
            "height": {"type": "integer"}
          }
        }
      }
    },
    "components": {
      "type": "object",
      "description": "Generated content components"
    },
    "properties": {
      "type": "object",
      "description": "Material-specific properties with title/description structure"
    },
    "faq": {
      "type": "string",
      "description": "FAQ content"
    },
    "relationships": {
      "type": "object",
      "description": "Cross-domain relationships"
    },
    "contamination": {
      "type": "object",
      "description": "Taxonomy information (optional/legacy)"
    },
    "breadcrumb": {
      "type": "array",
      "description": "Breadcrumb navigation array",
      "items": {
        "type": "object",
        "required": ["label", "href"],
        "properties": {
          "label": {"type": "string"},
          "href": {"type": "string"}
        }
      }
    },
    "author": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": {"type": "integer"},
        "name": {"type": "string"},
        "country": {"type": "string"},
        "title": {"type": "string"},
        "expertise": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    }
  },
  "patternProperties": {
    "^title$": {
      "description": "FORBIDDEN: Use 'pageTitle' instead of generic 'title'",
      "not": {}
    },
    "^description$": {
      "description": "FORBIDDEN: Use 'metaDescription' instead of generic 'description'",
      "not": {}
    },
    ".*_description$": {
      "description": "FORBIDDEN: Legacy fields like 'materialCharacteristics_description' should be removed",
      "not": {}
    },
    "^micro$": {
      "description": "FORBIDDEN: Root-level 'micro' - use 'components.micro' instead",
      "not": {}
    }
  },
  "additionalProperties": true,
  "definitions": {
    "naming_conventions": {
      "description": "Naming convention rules enforced by this schema",
      "rules": {
        "pageTitle": "SEO-optimized page title (camelCase, 1-200 chars)",
        "metaDescription": "SEO meta description (camelCase, 50-160 chars)",
        "contentType": "Domain classification (camelCase: material, contaminant, etc.)",
        "schemaVersion": "Version string (format: 'X.Y.Z')",
        "FORBIDDEN_title": "Generic 'title' field not allowed at root level",
        "FORBIDDEN_description": "Generic 'description' field not allowed at root level",
        "FORBIDDEN_legacy_fields": "Fields ending in '_description' are deprecated",
        "FORBIDDEN_root_micro": "Use 'components.micro' instead of root-level 'micro'"
      }
    }
  }
}
