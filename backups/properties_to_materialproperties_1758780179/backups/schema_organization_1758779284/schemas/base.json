{
  "baseProfile": {
    "name": "base",
    "version": "1.4",
    "schemaType": "BaseProfile",
    "generatorConfig": {
      "tags": {
        "primaryKeywords": ["laser cleaning", "{subject} laser cleaning"],
        "maxTags": 8,
        "maxKeywords": 12
      },
      "jsonld": {
        "additionalProperties": [
          {
            "name": "applicationCategory",
            "value": "Laser Cleaning Technology"
          }
        ],
        "requiredProperties": ["@context", "@type", "headline", "description", "author", "url", "keywords", "about"],
        "recommendedProperties": ["datePublished", "dateModified", "publisher", "hasPart", "mentions"]
      },
      "frontmatter": {
        "includeDescription": true,
        "includeAuthor": true,
        "includeKeywords": true,
        "includeTags": true,
        "includePublicationDate": true,
        "maxLength": 3000,
        "minLength": 2000
      },
      "contentGeneration": {
        "dynamicSectionsFromFrontmatter": true,
        "fieldContentMapping": {},
        "introductionPrompt": "Provide a comprehensive overview of {subject}"
      }
    },
    "sections": {},
    "profile": {
      "name": {
        "type": "string",
        "required": true,
        "description": "Article title (e.g., 'Fluence')",
        "example": "{subject}"
      },
      "description": {
        "type": "string",
        "required": true,
        "description": "Technical summary of {subject} in laser cleaning (150–200 words)",
        "example": "Fluence (J/cm²) is critical for precision laser cleaning..."
      },
      "website": {
        "type": "string",
        "required": true,
        "description": "Z-Beam",
        "example": "https://www.z-beam.com/fluence-laser-cleaning"
      },
      "author": {
        "type": "object",
        "required": true,
        "properties": {
          "author_id": {
            "type": "integer",
            "required": true,
            "description": "Unique author identifier",
            "example": 2
          },
          "author_name": {
            "type": "string",
            "required": true,
            "description": "Author's full name",
            "example": "Anna Rossi"
          },
          "author_country": {
            "type": "string",
            "required": true,
            "description": "Country of the author",
            "example": "Italy"
          },
          "name": {
            "type": "string",
            "required": true,
            "description": "Author or organization name",
            "example": "Laser Technology Institute"
          },
          "appellation": {
            "type": "string",
            "required": true,
            "description": "Author appellation for E-A-T",
            "example": "Industry Leader in Laser Cleaning Technology"
          }
        }
      },
      "keywords": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "required": true,
        "description": "10–12 technical keywords for SEO and search",
        "example": ["laser fluence calibration", "pulsed laser ablation", "industrial laser parameters"]
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "required": true,
        "description": "5–8 hyphenated tags for on-site navigation",
        "example": ["fluence-calibration", "laser-cleaning", "surface-treatment"]
      },
      "applications": {
        "type": "array",
        "required": false,
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "required": true,
              "description": "Application name",
              "example": "Aerospace Coating Removal"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Use case description (50–75 words)",
              "example": "Fluence of 2–10 J/cm² removes epoxy coatings..."
            }
          }
        },
        "description": "3–4 use cases for application/thesaurus articles"
      },
      "regulatoryStandards": {
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string",
              "required": true,
              "description": "Standard code",
              "example": "ANSI Z136.1"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Compliance description (50–75 words)",
              "example": "Class IV laser safety, requiring interlocks..."
            }
          }
        },
        "description": "2–3 compliance standards"
      },
      "challenges": {
        "type": "array",
        "required": false,
        "items": {
          "type": "object",
          "properties": {
            "issue": {
              "type": "string",
              "required": true,
              "description": "Technical challenge",
              "example": "Thermal Damage to Composites"
            },
            "solution": {
              "type": "string",
              "required": true,
              "description": "Solution description (50–75 words)",
              "example": "Pulse shaping adjusts fluence..."
            }
          }
        },
        "description": "1–3 challenges and solutions"
      },
      "outcomes": {
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "result": {
              "type": "string",
              "required": true,
              "description": "Measurable result",
              "example": "99.7% paint removal"
            },
            "metric": {
              "type": "string",
              "required": true,
              "description": "Measurement standard",
              "example": "ASTM D3359 adhesion test"
            }
          }
        },
        "description": "2–3 measurable outcomes"
      },
      "environmentalImpact": {
        "type": "array",
        "required": true,
        "items": {
          "type": "object",
          "properties": {
            "benefit": {
              "type": "string",
              "required": true,
              "description": "Environmental benefit",
              "example": "Waste Reduction"
            },
            "description": {
              "type": "string",
              "required": true,
              "description": "Environmental impact details (50-75 words)",
              "example": "Laser cleaning eliminates chemical solvents, reducing hazardous waste by 90% compared to traditional methods. EPA-compliant process generates zero wastewater and minimal airborne particulates."
            }
          }
        },
        "description": "2-3 environmental benefits"
      },
      "contentManagement": {
        "type": "object",
        "required": false,
        "properties": {
          "articleType": {
            "type": "string",
            "required": true,
            "description": "Article type (application, material, region, thesaurus)",
            "example": "thesaurus"
          },
          "publishedAt": {
            "type": "string",
            "format": "date",
            "required": false,
            "description": "Publication date",
            "example": "2025-07-17"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date",
            "required": false,
            "description": "Last update date",
            "example": "2025-07-17"
          }
        }
      },
      "relatedContent": {
        "type": "array",
        "required": false,
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "required": true,
              "example": "Laser Ablation Techniques"
            },
            "url": {
              "type": "string",
              "required": true,
              "example": "https://www.z-beam.com/laser-ablation-laser-cleaning"
            },
            "type": {
              "type": "string",
              "required": true,
              "example": "thesaurus"
            }
          }
        },
        "description": "Related articles for navigation"
      },
      "displayConfig": {
        "type": "object",
        "required": false,
        "properties": {
          "tablePresentations": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "field": { "type": "string", "required": true },
                "columns": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string", "required": true },
                      "property": { "type": "string", "required": true },
                      "width": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "jsonLD": {
      "requiredProperties": [
        "@context",
        "@type",
        "headline",
        "description",
        "author",
        "url",
        "keywords",
        "about"
      ],
      "recommendedProperties": [
        "datePublished",
        "dateModified",
        "publisher",
        "hasPart",
        "mentions",
        "relatedLink"
      ],
      "mappings": {
        "name": "headline",
        "description": "description",
        "website": "url",
        "author.name": "author.name",
        "author.appellation": "author.description",
        "keywords": "keywords",
        "tags": "about.category",
        "applications": "hasPart",
        "technicalSpecifications": "about.additionalProperty",
        "facilities": "publisher.location",
        "regulatoryStandards": "about.legislationApplied",
        "challenges": "mentions",
        "outcomes": "about.potentialAction",
        "environmentalImpact.description": "about.environmentalImpact",
        "environmentalImpact.metrics": "about.potentialAction",
        "contentManagement.publishedAt": "datePublished",
        "contentManagement.lastUpdated": "dateModified",
        "relatedContent": "relatedLink"
      }
    },
    "defaultDisplayConfig": {
      "tablePresentations": [
        {
          "field": "applications",
          "columns": [
            { "name": "Name", "property": "name" },
            { "name": "Description", "property": "description" }
          ]
        },
        {
          "field": "technicalSpecifications",
          "columns": [
            { "name": "Parameter", "property": "key" },
            { "name": "Value", "property": "value" }
          ]
        },
        {
          "field": "regulatoryStandards",
          "columns": [
            { "name": "Code", "property": "code" },
            { "name": "Description", "property": "description" }
          ]
        },
        {
          "field": "outcomes",
          "columns": [
            { "name": "Result", "property": "result" },
            { "name": "Metric", "property": "metric" }
          ]
        },
        {
          "field": "environmentalImpact",
          "columns": [
            { "name": "Benefit", "property": "benefit" },
            { "name": "Description", "property": "description" }
          ]
        },
        {
          "field": "facilities",
          "columns": [
            { "name": "Facility", "property": "name" },
            { "name": "Location", "property": "location" }
          ]
        }
      ],
      "listPresentations": [
        { "field": "keywords" },
        { "field": "tags" }
      ],
      "formatOptions": {
        "includeTableCaptions": false
      }
    },
    "validation": {
      "jsonLD": {
        "requiredProperties": [
          "@context",
          "@type",
          "headline",
          "description",
          "author",
          "url",
          "keywords",
          "about"
        ],
        "recommendedProperties": [
          "datePublished",
          "dateModified",
          "publisher",
          "hasPart",
          "mentions",
          "relatedLink"
        ],
        "minLength": 1000,
        "maxLength": 2000,
        "schemaOrgType": "TechnicalArticle",
        "schemaOrgCompliance": true,
        "validPropertiesOnly": true
      },
      "frontmatter": {
        "requiredFields": ["name", "description", "author", "keywords", "environmentalImpact", "regulatoryStandards", "outcomes"],
        "minLength": 2000,
        "maxLength": 3000
      },
      "requiredSections": []
    }
  }
}
