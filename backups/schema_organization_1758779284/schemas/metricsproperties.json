{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://z-beam.com/schemas/metricsproperties.json",
  "title": "Enhanced Metrics Properties Component Schema",
  "description": "Comprehensive schema for validating research-backed material properties with laser processing relevance and validation metadata",
  "type": "object",
  "properties": {
    "analysisMetadata": {
      "type": "object",
      "description": "Overall analysis metadata for the material properties",
      "properties": {
        "materialName": {
          "type": "string",
          "description": "Specific material name"
        },
        "materialCategory": {
          "type": "string",
          "description": "Material category",
          "enum": [
            "metal",
            "ceramic",
            "polymer",
            "composite",
            "stone",
            "glass",
            "wood"
          ]
        },
        "subcategory": {
          "type": "string",
          "description": "Material subcategory or grade"
        },
        "overallAccuracyScore": {
          "type": "number",
          "description": "Overall accuracy score for all properties (0.0-1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "analysisCompleteness": {
          "type": "number",
          "description": "Completeness of property analysis coverage (0.0-1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "overallScientificConsistency": {
          "type": "number",
          "description": "Overall consistency with material science principles (0.0-1.0)",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "propertiesAnalyzed": {
          "type": "integer",
          "description": "Total number of properties analyzed",
          "minimum": 0
        },
        "laserProcessingOptimization": {
          "type": "boolean",
          "description": "Whether properties are optimized for laser processing"
        },
        "recommendedProcessingConditions": {
          "type": "object",
          "description": "Recommended processing conditions based on properties",
          "properties": {
            "temperatureControl": {
              "type": "boolean",
              "description": "Whether temperature control is recommended"
            },
            "atmosphereControl": {
              "type": "boolean",
              "description": "Whether controlled atmosphere is recommended"
            },
            "preProcessing": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Recommended pre-processing steps"
            }
          }
        },
        "analysisDate": {
          "type": "string",
          "format": "date-time",
          "description": "When this analysis was performed"
        }
      }
    },
    "materialProperties": {
      "type": "object",
      "description": "Comprehensive material material properties with research validation and laser processing relevance",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "value": {
              "type": "number",
              "description": "The numerical value of the property"
            },
            "unit": {
              "type": "string",
              "description": "The unit of measurement"
            },
            "min": {
              "type": "number",
              "description": "Minimum typical value"
            },
            "max": {
              "type": "number",
              "description": "Maximum typical value"
            },
            "optimalValue": {
              "type": "number",
              "description": "Optimal value for laser processing applications"
            },
            "description": {
              "type": "string",
              "description": "Human-readable description of the property"
            },
            "priority": {
              "type": "integer",
              "description": "Display priority (1=highest, 3=lowest)",
              "minimum": 1,
              "maximum": 3
            },
            "laserRelevanceScore": {
              "type": "number",
              "description": "Relevance score for laser cleaning applications (0.0-1.0)",
              "minimum": 0.0,
              "maximum": 1.0
            },
            "processingImpact": {
              "type": "string",
              "description": "How this property impacts laser processing parameters and outcomes"
            },
            "materialSpecific": {
              "type": "boolean",
              "description": "Whether this property value is specific to the material type",
              "default": true
            },
            "categorySpecific": {
              "type": "boolean",
              "description": "Whether this property is optimized for the material category",
              "default": false
            },
            "thermalProperties": {
              "type": "object",
              "description": "Thermal characteristics relevant to laser processing",
              "properties": {
                "thermalDiffusivity": {
                  "type": "number",
                  "description": "Thermal diffusivity value"
                },
                "heatCapacity": {
                  "type": "number",
                  "description": "Specific heat capacity"
                },
                "thermalShockResistance": {
                  "type": "string",
                  "description": "Resistance to thermal shock",
                  "enum": [
                    "low",
                    "moderate",
                    "high",
                    "excellent"
                  ]
                },
                "thermalExpansionAnisotropy": {
                  "type": "boolean",
                  "description": "Whether thermal expansion is directionally dependent"
                }
              }
            },
            "opticalProperties": {
              "type": "object",
              "description": "Optical properties relevant to laser interaction",
              "properties": {
                "absorptivityByWavelength": {
                  "type": "object",
                  "description": "Absorptivity values by laser wavelength",
                  "patternProperties": {
                    "^[0-9]+nm$": {
                      "type": "number",
                      "minimum": 0.0,
                      "maximum": 1.0
                    }
                  }
                },
                "reflectivityByWavelength": {
                  "type": "object",
                  "description": "Reflectivity values by laser wavelength",
                  "patternProperties": {
                    "^[0-9]+nm$": {
                      "type": "number",
                      "minimum": 0.0,
                      "maximum": 1.0
                    }
                  }
                },
                "surfaceConditionDependency": {
                  "type": "boolean",
                  "description": "Whether optical properties depend significantly on surface condition"
                }
              }
            },
            "mechanicalProperties": {
              "type": "object",
              "description": "Mechanical properties affecting laser processing",
              "properties": {
                "ablationThreshold": {
                  "type": "number",
                  "description": "Minimum fluence required for material removal (J/cm\u00b2)"
                },
                "fractureType": {
                  "type": "string",
                  "description": "Type of fracture behavior",
                  "enum": [
                    "ductile",
                    "brittle",
                    "mixed",
                    "temperature_dependent"
                  ]
                },
                "elasticModulusTemperatureDependency": {
                  "type": "boolean",
                  "description": "Whether elastic modulus varies significantly with temperature"
                }
              }
            },
            "validation": {
              "type": "object",
              "description": "Comprehensive validation metadata for property value",
              "properties": {
                "accuracyClass": {
                  "type": "string",
                  "description": "Accuracy classification based on validation",
                  "enum": [
                    "verified",
                    "validated",
                    "probable",
                    "estimated",
                    "uncertain"
                  ]
                },
                "confidenceScore": {
                  "type": "number",
                  "description": "Statistical confidence in the property value (0.0-1.0)",
                  "minimum": 0.0,
                  "maximum": 1.0
                },
                "validationLevel": {
                  "type": "string",
                  "description": "Level of validation performed",
                  "enum": [
                    "basic",
                    "standard",
                    "comprehensive",
                    "authoritative"
                  ]
                },
                "sourcesValidated": {
                  "type": "integer",
                  "description": "Number of authoritative sources cross-referenced",
                  "minimum": 0
                },
                "sourceAgreement": {
                  "type": "number",
                  "description": "Agreement score between validation sources (0.0-1.0)",
                  "minimum": 0.0,
                  "maximum": 1.0
                },
                "scientificConsistency": {
                  "type": "number",
                  "description": "Consistency with physical laws and material science (0.0-1.0)",
                  "minimum": 0.0,
                  "maximum": 1.0
                },
                "outlierAnalysis": {
                  "type": "object",
                  "description": "Statistical outlier analysis results",
                  "properties": {
                    "isOutlier": {
                      "type": "boolean",
                      "description": "Whether this value is considered an outlier"
                    },
                    "outlierScore": {
                      "type": "number",
                      "description": "Outlier probability score (0.0-1.0)",
                      "minimum": 0.0,
                      "maximum": 1.0
                    },
                    "standardDeviations": {
                      "type": "number",
                      "description": "Number of standard deviations from typical values"
                    }
                  }
                },
                "lastUpdated": {
                  "type": "string",
                  "format": "date-time",
                  "description": "When this property was last validated"
                }
              }
            },
            "researchSources": {
              "type": "array",
              "description": "Authoritative research sources supporting this property value",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Source name (e.g., ASM Handbook, CRC Handbook)"
                  },
                  "type": {
                    "type": "string",
                    "description": "Source type",
                    "enum": [
                      "handbook",
                      "database",
                      "journal",
                      "standard",
                      "calculation",
                      "experimental"
                    ]
                  },
                  "reliability": {
                    "type": "number",
                    "description": "Source reliability score (0.0-1.0)",
                    "minimum": 0.0,
                    "maximum": 1.0
                  },
                  "citation": {
                    "type": "string",
                    "description": "Full academic or professional citation"
                  },
                  "materialSpecific": {
                    "type": "boolean",
                    "description": "Whether this source is specific to the material type"
                  },
                  "date": {
                    "type": "string",
                    "format": "date",
                    "description": "Publication or access date"
                  }
                }
              }
            },
            "optimizationNotes": {
              "type": "array",
              "description": "Material and laser processing optimization notes",
              "items": {
                "type": "string"
              }
            },
            "subcategoryNotes": {
              "type": "array",
              "description": "Notes specific to material subcategory or grade",
              "items": {
                "type": "string"
              }
            },
            "temperatureDependency": {
              "type": "object",
              "description": "How this property varies with temperature",
              "properties": {
                "coefficient": {
                  "type": "number",
                  "description": "Temperature coefficient of the property"
                },
                "referenceTemperature": {
                  "type": "number",
                  "description": "Reference temperature for the property value (\u00b0C)"
                },
                "validTemperatureRange": {
                  "type": "object",
                  "properties": {
                    "min": {
                      "type": "number",
                      "description": "Minimum valid temperature (\u00b0C)"
                    },
                    "max": {
                      "type": "number",
                      "description": "Maximum valid temperature (\u00b0C)"
                    }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}