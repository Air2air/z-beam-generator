{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "material-frontmatter-schema",
  "title": "Material Frontmatter Schema",
  "description": "Comprehensive schema for laser cleaning material frontmatter validation",
  "type": "object",
  "required": [
    "name",
    "category",
    "title",
    "description",
    "materialProperties",
    "machineSettings",
    "technicalSpecifications",
    "substrateDescription",
    "author_object",
    "applications"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9\\s-]+$",
      "description": "Material name (title case)"
    },
    "category": {
      "type": "string",
      "enum": [
        "metal",
        "ceramic",
        "glass",
        "stone",
        "wood",
        "composite",
        "masonry",
        "semiconductor"
      ],
      "description": "Material category for classification"
    },
    "title": {
      "type": "string",
      "pattern": "^Laser Cleaning .+$",
      "description": "Page title starting with 'Laser Cleaning'"
    },
    "headline": {
      "type": "string",
      "maxLength": 150,
      "description": "SEO headline under 150 characters"
    },
    "description": {
      "type": "string",
      "minLength": 100,
      "maxLength": 300,
      "description": "Meta description 100-300 characters"
    },
    "keywords": {
      "type": "string",
      "description": "Comma-separated keywords for SEO"
    },
    "substrateDescription": {
      "type": "string",
      "pattern": "^[a-z]+ .+ substrate$",
      "description": "Material-specific substrate description"
    },
    "chemicalProperties": {
      "type": "object",
      "required": [
        "symbol",
        "formula",
        "materialType"
      ],
      "properties": {
        "symbol": {
          "type": "string"
        },
        "formula": {
          "type": "string"
        },
        "materialType": {
          "type": "string"
        }
      }
    },
    "machineSettings": {
      "type": "object",
      "required": [
        "powerRange",
        "pulseDuration",
        "wavelength",
        "spotSize",
        "repetitionRate"
      ],
      "properties": {
        "powerRange": {
          "type": "string",
          "pattern": "^[0-9]+-[0-9]+W$"
        },
        "powerRangeNumeric": {
          "type": "number",
          "minimum": 0
        },
        "pulseDuration": {
          "type": "string",
          "pattern": "^[0-9]+-[0-9]+ns$"
        },
        "pulseDurationNumeric": {
          "type": "number",
          "minimum": 0
        },
        "wavelength": {
          "type": "string"
        },
        "wavelengthNumeric": {
          "type": "number",
          "minimum": 0
        },
        "spotSize": {
          "type": "string"
        },
        "spotSizeNumeric": {
          "type": "number",
          "minimum": 0
        },
        "repetitionRate": {
          "type": "string"
        }
      }
    },
    "technicalSpecifications": {
      "type": "object",
      "required": [
        "contaminationSource",
        "thermalEffect",
        "wavelength",
        "powerRange",
        "pulseDuration",
        "spotSize",
        "repetitionRate"
      ],
      "properties": {
        "contaminationSource": {
          "type": "string",
          "minLength": 10,
          "description": "Material-specific contamination source description"
        },
        "thermalEffect": {
          "type": "string",
          "minLength": 10,
          "description": "Material-specific thermal effects description"
        },
        "wavelength": {
          "type": "string"
        },
        "powerRange": {
          "type": "string"
        },
        "pulseDuration": {
          "type": "string"
        },
        "spotSize": {
          "type": "string"
        },
        "repetitionRate": {
          "type": "string"
        }
      }
    },
    "composition": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Material composition list"
    },
    "applications": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "industry",
          "detail"
        ],
        "properties": {
          "industry": {
            "type": "string",
            "minLength": 3
          },
          "detail": {
            "type": "string",
            "minLength": 20
          }
        }
      }
    },
    "compatibility": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "regulatoryStandards": {
      "type": "string",
      "description": "Applicable regulatory standards"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "author_object": {
      "type": "object",
      "required": [
        "id",
        "name",
        "sex",
        "title",
        "country",
        "expertise"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 1
        },
        "name": {
          "type": "string",
          "minLength": 3
        },
        "sex": {
          "type": "string",
          "enum": [
            "m",
            "f"
          ]
        },
        "title": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "minLength": 3
        },
        "expertise": {
          "type": "string",
          "minLength": 10
        },
        "image": {
          "type": "string",
          "pattern": "^/images/author/.+\\.(jpg|png)$"
        }
      }
    },
    "images": {
      "type": "object",
      "required": [
        "hero",
        "micro"
      ],
      "properties": {
        "hero": {
          "type": "object",
          "required": [
            "alt",
            "url"
          ],
          "properties": {
            "alt": {
              "type": "string",
              "minLength": 20
            },
            "url": {
              "type": "string",
              "pattern": "^/images/.+\\.(jpg|png)$"
            }
          }
        },
        "micro": {
          "type": "object",
          "required": [
            "alt",
            "url"
          ],
          "properties": {
            "alt": {
              "type": "string",
              "minLength": 20
            },
            "url": {
              "type": "string",
              "pattern": "^/images/.+\\.(jpg|png)$"
            }
          }
        }
      }
    },
    "environmentalImpact": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "benefit",
          "description"
        ],
        "properties": {
          "benefit": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "minLength": 30
          }
        }
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "result",
          "metric"
        ],
        "properties": {
          "result": {
            "type": "string"
          },
          "metric": {
            "type": "string",
            "minLength": 15
          }
        }
      }
    },
    "materialProperties": {
      "type": "object",
      "required": [
        "density",
        "thermalConductivity"
      ],
      "properties": {
        "density": {
          "type": "string",
          "pattern": "^[0-9.-]+\\s*g/cm\u00b3$"
        },
        "densityNumeric": {
          "type": "number",
          "minimum": 0
        },
        "meltingPoint": {
          "type": "string"
        },
        "meltingPointNumeric": {
          "type": "number"
        },
        "thermalConductivity": {
          "type": "string"
        },
        "thermalConductivityNumeric": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  },
  "additionalProperties": true
}