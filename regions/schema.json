{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://z-beam.com/schemas/region_frontmatter.json",
  "title": "Region Frontmatter Schema",
  "description": "JSON Schema for geographic region laser cleaning frontmatter files",
  "type": "object",
  "required": [
    "layout",
    "title",
    "region",
    "description"
  ],
  "properties": {
    "layout": {
      "type": "string",
      "const": "region",
      "description": "Layout type for region pages"
    },
    "title": {
      "type": "string",
      "description": "Page title"
    },
    "region": {
      "type": "string",
      "description": "Region name"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the region and its laser cleaning market"
    },
    "countries": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Countries in this region"
    },
    "generated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of generation"
    },
    "placeholder": {
      "type": "boolean",
      "description": "Whether this is placeholder content"
    },
    "marketCharacteristics": {
      "type": "object",
      "description": "Market characteristics for this region",
      "properties": {
        "maturity": {
          "type": "string",
          "enum": ["early stage", "emerging", "mature", "advanced"]
        },
        "growth_rate": {
          "type": "string",
          "enum": ["low", "moderate", "high", "very high"]
        },
        "market_size": {
          "type": "string",
          "enum": ["small", "medium", "large", "very large"]
        },
        "technology_adoption": {
          "type": "string",
          "enum": ["limited", "moderate", "high", "very high"]
        }
      }
    },
    "regulatoryFramework": {
      "type": "object",
      "description": "Regulatory information",
      "properties": {
        "primary_agencies": {
          "type": "array",
          "items": {"type": "string"}
        },
        "laser_safety_standard": {
          "type": "string"
        },
        "environmental_regulations": {
          "type": "array",
          "items": {"type": "string"}
        },
        "worker_safety_requirements": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "commonApplications": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Common laser cleaning applications in this region"
    },
    "language": {
      "type": "string",
      "description": "Primary languages spoken"
    },
    "imagePrompts": {
      "type": "object",
      "description": "AI image generation prompts for Gemini",
      "properties": {
        "historical": {
          "type": "string",
          "description": "Prompt for historical city/county photo"
        },
        "business": {
          "type": "string",
          "description": "Prompt for local business using laser cleaning"
        }
      }
    },
    "imageFiles": {
      "type": "object",
      "description": "Generated image file paths",
      "properties": {
        "historical": {
          "type": "string",
          "description": "Path to historical photo"
        },
        "business": {
          "type": "string",
          "description": "Path to business photo"
        }
      }
    },
    "author": {
      "type": "object",
      "description": "Author information",
      "properties": {
        "name": {"type": "string"},
        "country": {"type": "string"},
        "expertise": {"type": "string"}
      }
    },
    "_metadata": {
      "type": "object",
      "description": "Generation metadata",
      "properties": {
        "generator": {"type": "string"},
        "version": {"type": "string"},
        "content_type": {"type": "string"},
        "status": {"type": "string"}
      }
    }
  }
}
